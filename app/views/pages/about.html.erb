<!-- app/views/pages/about.html.erb -->
<!-- Feature 1.4 - About page show view -->

<div class="container my-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">About Us</li>
    </ol>
  </nav>

  <div class="row justify-content-center">
    <div class="col-lg-10">
      <!-- Page Header -->
      <div class="text-center mb-5">
        <h1 class="display-3 fw-bold mb-3" style="color: var(--yae-purple);">
          <%= @page.title %>
        </h1>
        <div class="mx-auto" style="width: 100px; height: 4px; background: linear-gradient(90deg, var(--yae-pink), var(--yae-purple));"></div>
      </div>

      <!-- Page Content -->
      <div class="card shadow-sm border-0 mb-5">
        <div class="card-body p-5">
          <div class="page-content" style="font-size: 1.1rem; line-height: 1.8; color: #2c3e50;">
            <%= @page.content.body.to_s.html_safe %>
          </div>
        </div>
      </div>

      <!-- Decorative Elements -->
      <div class="row g-4 mb-5">
        <div class="col-md-4 text-center">
          <div class="p-4 rounded h-100" style="background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);">
            <div class="mb-3" style="font-size: 3rem; color: var(--yae-purple);">
              <i class="bi bi-book-fill"></i>
            </div>
            <h4 class="fw-bold mb-2" style="color: var(--yae-purple);">Quality Books</h4>
            <p class="text-muted mb-0">From selected books; from anime manga to sci-fi fiction novels!</p>
          </div>
        </div>
        <div class="col-md-4 text-center">
          <div class="p-4 rounded h-100" style="background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);">
            <div class="mb-3" style="font-size: 3rem; color: var(--yae-purple);">
              <i class="bi bi-truck"></i>
            </div>
            <h4 class="fw-bold mb-2" style="color: var(--yae-purple);">Fast Shipping</h4>
            <p class="text-muted mb-0">Quick and reliable delivery service provided by Komaniya Express</p>
          </div>
        </div>
        <div class="col-md-4 text-center">
          <div class="p-4 rounded h-100" style="background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);">
            <div class="mb-3" style="font-size: 3rem; color: var(--yae-purple);">
              <i class="bi bi-award-fill"></i>
            </div>
            <h4 class="fw-bold mb-2" style="color: var(--yae-purple);">Since 1984</h4>
            <p class="text-muted mb-0">Trusted by editors of Inazuma and worldwide</p>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <%= link_to root_path, class: 'btn btn-lg fw-semibold px-5 py-3 btn-yae-cta' do %>
          <i class="bi bi-collection me-2"></i>Browse Our Collection
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .page-content p {
    margin-bottom: 1.5rem;
  }
  
  .page-content strong {
    color: var(--yae-purple);
  }

  .page-content h1, .page-content h2, .page-content h3 {
    color: var(--yae-purple);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .page-content ul, .page-content ol {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .page-content a {
    color: var(--yae-purple);
    text-decoration: underline;
  }

  .page-content a:hover {
    color: var(--yae-pink);
  }

  .btn-yae-cta {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    color: white;
    border-radius: 50px;
    border: none;
    box-shadow: 0 4px 15px rgba(139, 44, 127, 0.3);
    transition: all 0.3s ease;
  }

  .btn-yae-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(139, 44, 127, 0.4);
    background: linear-gradient(135deg, var(--yae-dark) 0%, var(--yae-purple) 100%);
    color: white;
  }

  /* Feature cards hover effect */
  .row.g-4 > div > div {
    transition: all 0.3s ease;
  }

  .row.g-4 > div > div:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(139, 44, 127, 0.2);
  }
</style>

<!-- Ensure Bootstrap Icons are loaded -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">