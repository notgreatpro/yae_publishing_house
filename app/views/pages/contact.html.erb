<!-- app/views/pages/contact.html.erb -->
<!-- Feature 1.4 - Contact page show view -->

<div class="container my-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
    </ol>
  </nav>

  <div class="row justify-content-center">
    <div class="col-lg-10">
      <!-- Page Header -->
      <div class="text-center mb-5">
        <h1 class="display-3 fw-bold mb-3" style="color: var(--yae-purple);">
          <%= @page.title %>
        </h1>
        <div class="mx-auto" style="width: 100px; height: 4px; background: linear-gradient(90deg, var(--yae-pink), var(--yae-purple));"></div>
      </div>

      <div class="row g-4 mb-5">
        <!-- Contact Information Card -->
        <div class="col-lg-6">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body p-4">
              <h3 class="h4 mb-4" style="color: var(--yae-purple);">Get in Touch</h3>
              
              <div class="page-content" style="font-size: 1.05rem; line-height: 1.8; color: #2c3e50;">
                <%= simple_format(@page.content, {}, sanitize: false) %>
              </div>

              <hr class="my-4">

              <!-- Contact Details -->
              <div class="mb-3">
                <div class="d-flex align-items-start mb-3">
                  <div class="me-3" style="color: var(--yae-purple); font-size: 1.5rem;">
                    <i class="bi bi-geo-alt-fill"></i>
                  </div>
                  <div>
                    <h5 class="mb-1">Visit Us</h5>
                    <p class="text-muted mb-0">657 Watatsumi Ave E<br>Inazuma City, Inazuma 74857</p>
                  </div>
                </div>

                <div class="d-flex align-items-start mb-3">
                  <div class="me-3" style="color: var(--yae-purple); font-size: 1.5rem;">
                    <i class="bi bi-envelope-fill"></i>
                  </div>
                  <div>
                    <h5 class="mb-1">Email Us</h5>
                    <p class="text-muted mb-0">
                      <a href="mailto:info@yaepublishinghouse.co.in" class="text-decoration-none" style="color: var(--yae-purple);">
                        info@yaepublishinghouse.co.in
                      </a>
                    </p>
                  </div>
                </div>

                <div class="d-flex align-items-start">
                  <div class="me-3" style="color: var(--yae-purple); font-size: 1.5rem;">
                    <i class="bi bi-telephone-fill"></i>
                  </div>
                  <div>
                    <h5 class="mb-1">Call Us</h5>
                    <p class="text-muted mb-0">
                      <a href="tel:+17567483985" class="text-decoration-none text-muted">
                        (756)-748-3985
                      </a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Business Hours Card -->
        <div class="col-lg-6">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body p-4">
              <h3 class="h4 mb-4" style="color: var(--yae-purple);">Business Hours</h3>
              
              <div class="list-group list-group-flush">
                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                  <span class="fw-semibold">Monday - Friday</span>
                  <span class="text-muted">9:00 AM - 10:30 PM</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                  <span class="fw-semibold">Saturday</span>
                  <span class="text-muted">10:00 AM - 6:00 PM</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                  <span class="fw-semibold">Sunday</span>
                  <span class="text-muted">12:00 PM - 5:00 PM</span>
                </div>
              </div>

              <hr class="my-4">

              <h4 class="h5 mb-3" style="color: var(--yae-purple);">Follow Us</h4>
              <div class="d-flex gap-3">
                <a href="https://facebook.com" target="_blank" class="btn btn-outline-secondary rounded-circle" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;" aria-label="Facebook">
                  <i class="bi bi-facebook fs-5"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="btn btn-outline-secondary rounded-circle" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;" aria-label="Twitter">
                  <i class="bi bi-twitter fs-5"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="btn btn-outline-secondary rounded-circle" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;" aria-label="Instagram">
                  <i class="bi bi-instagram fs-5"></i>
                </a>
                <a href="https://linkedin.com" target="_blank" class="btn btn-outline-secondary rounded-circle" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;" aria-label="LinkedIn">
                  <i class="bi bi-linkedin fs-5"></i>
                </a>
              </div>

              <div class="mt-4 p-3 rounded" style="background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);">
                <p class="mb-0 text-center">
                  <strong>Need help with an order?</strong><br>
                  <% if customer_signed_in? %>
                    <%= link_to 'View My Orders', orders_path, class: 'text-decoration-none fw-semibold', style: 'color: var(--yae-purple);' %>
                  <% else %>
                    <%= link_to 'Sign In', new_customer_session_path, class: 'text-decoration-none fw-semibold', style: 'color: var(--yae-purple);' %> to view your orders
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Map Section - FIXED WITH PROPER SPACING -->
      <div class="row">
        <div class="col-12">
          <div class="card shadow-lg border-0 mb-5" style="border-radius: 15px; overflow: hidden;">
            <div class="position-relative" style="height: 400px;">
              <!-- Map Image -->
              <%= image_tag 'inazuma_map.png', 
                  alt: 'Yae Publishing House Location - Inazuma City Map',
                  class: 'w-100 h-100',
                  style: 'object-fit: cover; filter: brightness(0.95); display: block;' %>
              
              <!-- Overlay Gradient -->
              <div class="position-absolute top-0 start-0 w-100 h-100" 
                   style="background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.4) 100%); pointer-events: none;"></div>
              
              <!-- Location Pin -->
              <div class="position-absolute" style="top: 30%; left: 50%; transform: translate(-50%, -100%); z-index: 10;">
                <div class="pulse-marker">
                  <i class="bi bi-geo-alt-fill text-danger" style="font-size: 3.5rem; filter: drop-shadow(0 4px 8px rgba(233, 30, 99, 0.5));"></i>
                </div>
              </div>
              
              <!-- Location Info Card -->
              <div class="position-absolute bottom-0 start-0 w-100 p-3" style="z-index: 10;">
                <div class="card border-0 shadow" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px);">
                  <div class="card-body py-3">
                    <div class="row align-items-center g-2">
                      <div class="col-auto">
                        <i class="bi bi-geo-alt-fill text-danger fs-4"></i>
                      </div>
                      <div class="col">
                        <h6 class="mb-1 fw-bold">Yae Publishing House</h6>
                        <p class="mb-0 small text-muted">657 Watatsumi Ave E, Inazuma City, Inazuma 74857</p>
                      </div>
                      <div class="col-auto">
                        <button class="btn btn-sm btn-primary" onclick="alert('Opening directions in your map application...')" aria-label="Get directions">
                          <i class="bi bi-map me-1"></i>Directions
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  /* Page Content Styling */
  .page-content p {
    margin-bottom: 1.2rem;
  }
  
  /* Pulsing animation for the location marker */
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }
  
  .pulse-marker {
    animation: pulse 2s ease-in-out infinite;
  }
  
  /* Hover effects for social buttons */
  .btn-outline-secondary:hover {
    transform: translateY(-3px);
    transition: all 0.3s ease;
  }
  
  /* Ensure proper spacing and no overflow */
  .card {
    overflow: hidden;
  }
  
  /* Fix image rendering issues */
  img {
    vertical-align: top;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .display-3 {
      font-size: 2.5rem;
    }
    
    .card-body {
      padding: 1.5rem !important;
    }
    
    .position-absolute .card-body {
      padding: 0.75rem !important;
    }
    
    .btn-sm {
      font-size: 0.75rem;
      padding: 0.25rem 0.5rem;
    }
  }
</style>