<!-- app/views/orders/index.html.erb -->
<!-- Feature 3.2.1 - List all past orders (4%) -->

<div class="container my-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">My Orders</li>
    </ol>
  </nav>

  <div class="text-center mb-5 pb-4 border-bottom">
    <h1 class="display-4 mb-2" style="color: #2c3e50;">My Orders</h1>
    <p class="text-muted fs-5"><%= pluralize(@orders.count, 'order') %></p>
  </div>

  <% if @orders.any? %>
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <% @orders.each do |order| %>
          <div class="card shadow-sm mb-4">
            <!-- Card Header -->
            <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #f8f9fa;">
              <div>
                <h3 class="h5 mb-1" style="color: #2c3e50;">Order #<%= order.id %></h3>
                <p class="text-muted small mb-0"><%= order.created_at.strftime('%B %d, %Y') %></p>
              </div>
              <% if order.paid? %>
                <span class="badge rounded-pill" style="background-color: #d4edda; color: #155724; padding: 8px 16px; text-transform: uppercase; font-size: 0.85em;">Paid</span>
              <% elsif order.shipped? %>
                <span class="badge rounded-pill" style="background-color: #d1ecf1; color: #0c5460; padding: 8px 16px; text-transform: uppercase; font-size: 0.85em;">Shipped</span>
              <% elsif order.cancelled? %>
                <span class="badge rounded-pill" style="background-color: #f8d7da; color: #721c24; padding: 8px 16px; text-transform: uppercase; font-size: 0.85em;">Cancelled</span>
              <% else %>
                <span class="badge rounded-pill" style="background-color: #fff3cd; color: #856404; padding: 8px 16px; text-transform: uppercase; font-size: 0.85em;">Pending</span>
              <% end %>
            </div>

            <!-- Card Body -->
            <div class="card-body p-4">
              <div class="row">
                <div class="col-lg-8">
                  <!-- Order Items Preview -->
                  <% order.order_items.first(3).each do |item| %>
                    <div class="d-flex align-items-center mb-3">
                      <div class="flex-shrink-0 me-3">
                        <% if item.product.cover_image.attached? %>
                          <%= image_tag item.product.cover_image, alt: item.product.title, 
                              class: 'rounded', style: 'width: 50px; height: 70px; object-fit: cover;' %>
                        <% else %>
                          <div class="text-white rounded d-flex align-items-center justify-content-center" 
                               style="width: 50px; height: 70px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 1.2em;">
                          </div>
                        <% end %>
                      </div>
                      <div class="flex-grow-1">
                        <p class="mb-1 fw-semibold" style="font-size: 0.95em; color: #2c3e50;"><%= item.product.title %></p>
                        <p class="mb-0 text-muted small">Qty: <%= item.quantity %></p>
                      </div>
                    </div>
                  <% end %>
                  
                  <% if order.order_items.count > 3 %>
                    <p class="text-muted small fst-italic mb-0">
                      + <%= order.order_items.count - 3 %> more item(s)
                    </p>
                  <% end %>
                </div>

                <div class="col-lg-4 mt-3 mt-lg-0">
                  <!-- Order Summary -->
                  <div class="p-3 rounded" style="background-color: #f8f9fa;">
                    <div class="d-flex justify-content-between mb-2">
                      <span class="text-muted">Items:</span>
                      <strong style="color: #2c3e50;"><%= order.order_items.sum(:quantity) %></strong>
                    </div>
                    <div class="d-flex justify-content-between">
                      <span class="text-muted">Total:</span>
                      <strong class="fs-5" style="color: #27ae60;"><%= number_to_currency(order.total_amount) %></strong>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Card Footer -->
            <div class="card-footer d-flex justify-content-between align-items-center" style="background-color: #f8f9fa;">
              <%= link_to 'View Details', order_path(order), class: 'btn btn-primary px-4 fw-semibold' %>
              
              <% if order.paid? %>
                <span class="badge rounded-pill d-flex align-items-center gap-2" style="background-color: #d4edda; color: #155724; padding: 8px 14px;">
                  <span style="font-size: 1.1em;">✓</span> Paid
                </span>
              <% elsif order.pending? %>
                <span class="badge rounded-pill d-flex align-items-center gap-2" style="background-color: #fff3cd; color: #856404; padding: 8px 14px;">
                  <span style="font-size: 1.1em;">⏱</span> Payment Pending
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="card shadow-sm text-center">
          <div class="card-body py-5">
            <h2 class="h3 mb-3" style="color: #2c3e50;">No orders yet</h2>
            <p class="text-muted mb-4 fs-5">You haven't placed any orders yet. Start shopping to see your orders here!</p>
            <%= link_to 'Browse Books', products_path, class: 'btn btn-primary btn-lg px-5 fw-semibold' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>