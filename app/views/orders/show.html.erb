<!-- app/views/orders/show.html.erb -->
<div class="order-container">
  <div class="breadcrumb">
    <%= link_to 'Home', root_path %> &gt; 
    <%= link_to 'My Orders', orders_path %> &gt; 
    Order #<%= @order.id %>
  </div>

  <header class="order-header">
    <h1>Order #<%= @order.id %></h1>
    <div class="order-status <%= @order.status %>">
      <%= @order.status.titleize %>
    </div>
  </header>

  <div class="order-content">
    <!-- Order Details -->
    <div class="order-main">
      <!-- Shipping Address -->
      <div class="order-section">
        <h2>Shipping Address</h2>
        <div class="address-box">
          <p><strong><%= current_customer.first_name %> <%= current_customer.last_name %></strong></p>
          <p><%= @order.address_line1 %></p>
          <% if @order.address_line2.present? %>
            <p><%= @order.address_line2 %></p>
          <% end %>
          <p><%= @order.city %>, <%= @order.province.name %> <%= @order.postal_code %></p>
        </div>
      </div>

      <!-- Order Items -->
      <div class="order-section">
        <h2>Order Items</h2>
        <div class="order-items">
          <% @order.order_items.each do |item| %>
            <div class="order-item">
              <div class="item-image">
                <% if item.product.cover_image.attached? %>
                  <%= image_tag item.product.cover_image, alt: item.product.title %>
                <% else %>
                  <div class="placeholder-image">ðŸ“š</div>
                <% end %>
              </div>
              <div class="item-details">
                <h3><%= link_to item.product.title, product_path(item.product) %></h3>
                <p class="item-quantity">Quantity: <%= item.quantity %></p>
                <p class="item-price"><%= number_to_currency(item.price_at_purchase) %> each</p>
              </div>
              <div class="item-total">
                <%= number_to_currency(item.subtotal) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Payment Information -->
      <% if @order.stripe_payment_id.present? %>
        <div class="order-section">
          <h2>Payment Information</h2>
          <div class="payment-info">
            <p><strong>Status:</strong> <span class="payment-status-paid">Paid</span></p>
            <p><strong>Payment ID:</strong> <code><%= @order.stripe_payment_id %></code></p>
            <p><strong>Payment Date:</strong> <%= @order.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Order Summary Sidebar -->
    <div class="order-sidebar">
      <h2>Order Summary</h2>
      
      <div class="summary-row">
        <span>Subtotal:</span>
        <span><%= number_to_currency(@order.subtotal) %></span>
      </div>

      <% if @order.gst_amount && @order.gst_amount > 0 %>
        <div class="summary-row tax-row">
          <span>GST (<%= number_to_percentage(@order.gst_rate, precision: 1) %>):</span>
          <span><%= number_to_currency(@order.gst_amount) %></span>
        </div>
      <% end %>

      <% if @order.pst_amount && @order.pst_amount > 0 %>
        <div class="summary-row tax-row">
          <span>PST (<%= number_to_percentage(@order.pst_rate, precision: 1) %>):</span>
          <span><%= number_to_currency(@order.pst_amount) %></span>
        </div>
      <% end %>

      <% if @order.hst_amount && @order.hst_amount > 0 %>
        <div class="summary-row tax-row">
          <span>HST (<%= number_to_percentage(@order.hst_rate, precision: 1) %>):</span>
          <span><%= number_to_currency(@order.hst_amount) %></span>
        </div>
      <% end %>

      <hr>

      <div class="summary-row total-row">
        <span>Total:</span>
        <span><%= number_to_currency(@order.total_amount) %></span>
      </div>

      <div class="order-meta">
        <p><strong>Order Date:</strong><br>
        <%= @order.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
      </div>

      <div class="order-actions">
        <%= link_to 'Back to Orders', orders_path, class: 'btn-secondary' %>
      </div>
    </div>
  </div>
</div>

<style>
  .order-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
  }

  .breadcrumb {
    margin-bottom: 20px;
    color: #7f8c8d;
    font-size: 0.9em;
  }

  .breadcrumb a {
    color: #3498db;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .order-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    padding: 20px 0;
    border-bottom: 2px solid #ecf0f1;
  }

  .order-header h1 {
    font-size: 2em;
    color: #2c3e50;
    margin: 0;
  }

  .order-status {
    padding: 10px 20px;
    border-radius: 20px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.9em;
  }

  .order-status.pending {
    background: #fff3cd;
    color: #856404;
  }

  .order-status.paid {
    background: #d4edda;
    color: #155724;
  }

  .order-status.shipped {
    background: #d1ecf1;
    color: #0c5460;
  }

  .order-status.cancelled {
    background: #f8d7da;
    color: #721c24;
  }

  .order-content {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 40px;
  }

  .order-main {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .order-section {
    background: white;
    padding: 30px;
    border-radius: 8px;
    border: 1px solid #ddd;
  }

  .order-section h2 {
    font-size: 1.5em;
    color: #2c3e50;
    margin: 0 0 20px 0;
  }

  .address-box {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 6px;
  }

  .address-box p {
    margin: 5px 0;
    color: #2c3e50;
  }

  .order-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .order-item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 20px;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 6px;
    align-items: center;
  }

  .item-image {
    width: 80px;
    height: 110px;
    overflow: hidden;
    border-radius: 4px;
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2em;
    border-radius: 4px;
  }

  .item-details h3 {
    font-size: 1.1em;
    margin: 0 0 10px 0;
  }

  .item-details h3 a {
    color: #2c3e50;
    text-decoration: none;
  }

  .item-details h3 a:hover {
    color: #3498db;
    text-decoration: underline;
  }

  .item-details p {
    margin: 5px 0;
    font-size: 0.9em;
    color: #7f8c8d;
  }

  .item-total {
    font-size: 1.3em;
    font-weight: 700;
    color: #2c3e50;
  }

  .payment-info {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 6px;
  }

  .payment-info p {
    margin: 10px 0;
    color: #2c3e50;
  }

  .payment-status-paid {
    color: #27ae60;
    font-weight: 600;
  }

  .payment-info code {
    background: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9em;
  }

  .order-sidebar {
    background: #f8f9fa;
    padding: 30px;
    border-radius: 8px;
    height: fit-content;
    position: sticky;
    top: 20px;
  }

  .order-sidebar h2 {
    font-size: 1.5em;
    color: #2c3e50;
    margin: 0 0 20px 0;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
    color: #2c3e50;
  }

  .tax-row {
    font-size: 0.9em;
    color: #7f8c8d;
  }

  .total-row {
    font-size: 1.3em;
    font-weight: 700;
    margin-top: 15px;
  }

  hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 15px 0;
  }

  .order-meta {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
  }

  .order-meta p {
    color: #7f8c8d;
    font-size: 0.9em;
    margin: 0;
  }

  .order-actions {
    margin-top: 20px;
  }

  .btn-secondary {
    display: block;
    width: 100%;
    padding: 12px;
    background: #3498db;
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: background 0.3s;
  }

  .btn-secondary:hover {
    background: #2980b9;
    text-decoration: none;
  }

  @media (max-width: 1024px) {
    .order-content {
      grid-template-columns: 1fr;
    }

    .order-sidebar {
      position: static;
    }

    .order-item {
      grid-template-columns: 60px 1fr;
      grid-template-rows: auto auto;
    }

    .item-total {
      grid-column: 1 / 3;
      justify-self: start;
      margin-top: 10px;
    }
  }
</style>