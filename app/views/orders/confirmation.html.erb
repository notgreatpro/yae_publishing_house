<div class="confirmation-container">
  <div class="confirmation-card">
    <div class="success-icon">✅</div>
    <h1>Order Confirmed!</h1>
    <p class="order-number">Order #<%= @order.id %></p>
    
    <div class="confirmation-message">
      <p>Thank you for your order! We've received your purchase and will process it shortly.</p>
      <p>A confirmation email has been sent to <strong><%= current_customer.email %></strong></p>
    </div>

    <div class="order-details">
      <h2>Order Summary</h2>
      
      <div class="order-items">
        <% @order.order_items.each do |item| %>
          <div class="order-item">
            <div class="item-info">
              <h3><%= item.product.title %></h3>
              <p>Quantity: <%= item.quantity %> × <%= number_to_currency(item.price_at_purchase) %></p>
            </div>
            <div class="item-total">
              <%= number_to_currency(item.total_price) %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="order-totals">
        <div class="total-row">
          <span>Subtotal:</span>
          <span><%= number_to_currency(@order.subtotal) %></span>
        </div>
        
        <% if @order.gst_amount && @order.gst_amount > 0 %>
          <div class="total-row tax-row">
            <span>GST (<%= @order.gst_rate %>%):</span>
            <span><%= number_to_currency(@order.gst_amount) %></span>
          </div>
        <% end %>
        
        <% if @order.pst_amount && @order.pst_amount > 0 %>
          <div class="total-row tax-row">
            <span>PST (<%= @order.pst_rate %>%):</span>
            <span><%= number_to_currency(@order.pst_amount) %></span>
          </div>
        <% end %>
        
        <% if @order.hst_amount && @order.hst_amount > 0 %>
          <div class="total-row tax-row">
            <span>HST (<%= @order.hst_rate %>%):</span>
            <span><%= number_to_currency(@order.hst_amount) %></span>
          </div>
        <% end %>
        
        <div class="total-row grand-total">
          <span>Total:</span>
          <span><%= number_to_currency(@order.total_amount) %></span>
        </div>
      </div>

      <div class="shipping-address">
        <h3>Shipping Address</h3>
        <p><%= @order.address_line1 %></p>
        <% if @order.address_line2.present? %>
          <p><%= @order.address_line2 %></p>
        <% end %>
        <p><%= @order.city %>, <%= @order.province.name %></p>
        <p><%= @order.postal_code %></p>
      </div>
    </div>

    <div class="actions">
      <%= link_to "View All Orders", orders_path, class: 'btn-primary' %>
      <%= link_to "Continue Shopping", products_path, class: 'btn-secondary' %>
    </div>
  </div>
</div>

