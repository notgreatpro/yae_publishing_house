<!-- app/views/orders/confirmation.html.erb -->
<div class="confirmation-container">
  <div class="confirmation-success">
    <div class="success-icon">âœ“</div>
    <h1>Order Placed Successfully!</h1>
    <p class="order-number">Order #<%= @order.id %></p>
  </div>

  <div class="confirmation-details">
    <h2>Order Details</h2>
    
    <div class="detail-section">
      <h3>Shipping Address</h3>
      <p><%= @order.address_line1 %></p>
      <% if @order.address_line2.present? %>
        <p><%= @order.address_line2 %></p>
      <% end %>
      <p><%= @order.city %>, <%= @order.province.code %> <%= @order.postal_code %></p>
    </div>

    <div class="detail-section">
      <h3>Order Items</h3>
      <% @order.order_items.each do |item| %>
        <div class="order-item">
          <span><%= item.product.title %> (x<%= item.quantity %>)</span>
          <span><%= number_to_currency(item.price_at_purchase * item.quantity) %></span>
        </div>
      <% end %>
    </div>

    <div class="detail-section">
      <h3>Order Summary</h3>
      <div class="order-item">
        <span>Subtotal:</span>
        <span><%= number_to_currency(@order.subtotal) %></span>
      </div>
      <div class="order-item">
        <span>Tax:</span>
        <span><%= number_to_currency(@order.tax_amount) %></span>
      </div>
      <div class="order-item total">
        <span><strong>Total:</strong></span>
        <span><strong><%= number_to_currency(@order.total_amount) %></strong></span>
      </div>
    </div>

    <div class="confirmation-actions">
      <%= link_to 'View Order Details', order_path(@order), class: 'btn-primary' %>
      <%= link_to 'Continue Shopping', root_path, class: 'btn-secondary' %>
    </div>
  </div>
</div>

<style>
  .confirmation-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 20px;
  }

  .confirmation-success {
    text-align: center;
    background: #e8f5e9;
    padding: 40px;
    border-radius: 8px;
    margin-bottom: 30px;
  }

  .success-icon {
    font-size: 4em;
    color: #27ae60;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
  }

  .confirmation-success h1 {
    color: #27ae60;
    margin-bottom: 10px;
  }

  .order-number {
    color: #7f8c8d;
    font-size: 1.2em;
  }

  .confirmation-details {
    background: white;
    padding: 30px;
    border-radius: 8px;
    border: 1px solid #ddd;
  }

  .detail-section {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #ecf0f1;
  }

  .detail-section:last-of-type {
    border-bottom: none;
  }

  .detail-section h3 {
    color: #2c3e50;
    margin-bottom: 15px;
  }

  .order-item {
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
  }

  .order-item.total {
    font-size: 1.2em;
    padding-top: 15px;
    border-top: 2px solid #2c3e50;
    margin-top: 10px;
  }

  .confirmation-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
  }

  .btn-primary, .btn-secondary {
    flex: 1;
    padding: 15px;
    text-align: center;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s;
  }

  .btn-primary {
    background: #3498db;
    color: white;
  }

  .btn-primary:hover {
    background: #2980b9;
  }

  .btn-secondary {
    background: #ecf0f1;
    color: #2c3e50;
  }

  .btn-secondary:hover {
    background: #d5dbdb;
  }
</style>