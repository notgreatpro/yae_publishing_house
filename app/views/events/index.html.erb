<div class="yae-events-page">
  
  <!-- Hero Header -->
  <div class="yae-events-hero">
    <div class="container-fluid px-lg-5">
      <div class="text-center py-5">
        <h1 class="display-3 fw-bold text-white mb-3 animate-fade-in">
          <i class="bi bi-calendar-event me-3"></i>Literary Events
        </h1>
        <p class="lead text-white-50 fst-italic mb-0">
          Join us for exclusive book launches, author signings, and literary experiences
        </p>
      </div>
    </div>
  </div>

  <!-- Featured Events -->
  <% if @featured_events.any? %>
    <div class="yae-featured-section">
      <div class="container-fluid px-lg-5">
        <h2 class="yae-section-title text-center mb-4">
          <i class="bi bi-star-fill me-2"></i>Featured Events
        </h2>
        
        <div class="row g-4 mb-5">
          <% @featured_events.each do |event| %>
            <div class="col-lg-4 col-md-6">
              <%= link_to event_path(event), class: 'text-decoration-none' do %>
                <div class="yae-featured-card">
                  <div class="yae-featured-badge">
                    <i class="bi bi-star-fill me-1"></i>FEATURED
                  </div>
                  
                  <div class="yae-featured-image">
                    <% if event.cover_image.attached? %>
                      <%= image_tag event.medium_image, alt: event.title %>
                    <% else %>
                      <div class="yae-featured-placeholder">
                        <i class="bi bi-<%= event.event_type_icon %>"></i>
                      </div>
                    <% end %>
                    <div class="yae-featured-overlay">
                      <span class="yae-featured-type">
                        <i class="bi bi-<%= event.event_type_icon %> me-2"></i>
                        <%= event.event_type.titleize %>
                      </span>
                    </div>
                  </div>
                  
                  <div class="yae-featured-content">
                    <h3 class="yae-featured-title"><%= event.title %></h3>
                    <div class="yae-featured-info">
                      <div class="yae-info-item">
                        <i class="bi bi-calendar3"></i>
                        <%= event.formatted_date %>
                      </div>
                      <div class="yae-info-item">
                        <i class="bi bi-clock"></i>
                        <%= event.formatted_time %>
                      </div>
                      <div class="yae-info-item">
                        <i class="bi bi-geo-alt-fill"></i>
                        <%= event.location %>
                      </div>
                    </div>
                    
                    <% if event.max_attendees.present? %>
                      <div class="yae-spots-indicator">
                        <div class="yae-spots-bar">
                          <div class="yae-spots-fill" style="width: <%= (event.current_attendees.to_f / event.max_attendees * 100).round %>%"></div>
                        </div>
                        <span class="yae-spots-text">
                          <%= event.spots_available %> spots remaining
                        </span>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="container-fluid px-lg-5 py-5">
    
    <!-- Filter Section -->
    <div class="yae-filter-section mb-5">
      <div class="text-center mb-4">
        <h3 class="yae-filter-title">Browse Events</h3>
      </div>
      
      <!-- Time Filters -->
      <div class="d-flex justify-content-center mb-4">
        <div class="btn-group-yae" role="group">
          <%= link_to events_path, 
              class: "btn btn-filter #{params[:filter].blank? ? 'active' : ''}" do %>
            <i class="bi bi-grid-3x3-gap-fill me-2"></i>All Events
          <% end %>
          <%= link_to events_path(filter: 'upcoming'), 
              class: "btn btn-filter #{params[:filter] == 'upcoming' ? 'active' : ''}" do %>
            <i class="bi bi-calendar-plus me-2"></i>Upcoming
          <% end %>
          <%= link_to events_path(filter: 'ongoing'), 
              class: "btn btn-filter #{params[:filter] == 'ongoing' ? 'active' : ''}" do %>
            <i class="bi bi-broadcast me-2"></i>Happening Now
          <% end %>
          <%= link_to events_path(filter: 'past'), 
              class: "btn btn-filter #{params[:filter] == 'past' ? 'active' : ''}" do %>
            <i class="bi bi-clock-history me-2"></i>Past Events
          <% end %>
        </div>
      </div>
      
      <!-- Event Type Filters -->
      <div class="d-flex flex-wrap justify-content-center gap-3">
        <%= link_to events_path(filter: params[:filter]), 
            class: "btn btn-event-type #{params[:event_type].blank? ? 'active' : ''}" do %>
          All Types
        <% end %>
        
        <% Event.event_types.keys.each do |type| %>
          <%= link_to events_path(filter: params[:filter], event_type: type), 
              class: "btn btn-event-type #{params[:event_type] == type ? 'active' : ''}" do %>
            <%= type.titleize %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Events Grid -->
    <% if @events.any? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        <% @events.each do |event| %>
          <div class="col">
            <%= link_to event_path(event), class: 'text-decoration-none yae-event-link' do %>
              <div class="yae-event-card h-100">
                
                <!-- Status Badge -->
                <span class="yae-status-badge <%= event.status_badge_class %>">
                  <% if event.is_ongoing? %>
                    <span class="yae-live-dot"></span>LIVE NOW
                  <% else %>
                    <%= event.status.upcase %>
                  <% end %>
                </span>
                
                <!-- Event Image -->
                <div class="yae-event-image">
                  <% if event.cover_image.attached? %>
                    <%= image_tag event.medium_image, alt: event.title %>
                  <% else %>
                    <div class="yae-event-placeholder">
                      <i class="bi bi-<%= event.event_type_icon %>"></i>
                    </div>
                  <% end %>
                  <div class="yae-event-overlay">
                    <span class="yae-event-type-badge">
                      <i class="bi bi-<%= event.event_type_icon %> me-2"></i>
                      <%= event.event_type.titleize %>
                    </span>
                  </div>
                </div>

                <!-- Event Info -->
                <div class="yae-event-info">
                  <h5 class="yae-event-title">
                    <%= truncate(event.title, length: 60) %>
                  </h5>
                  
                  <div class="yae-event-details">
                    <div class="yae-detail-row">
                      <i class="bi bi-calendar3"></i>
                      <span><%= event.formatted_date %></span>
                    </div>
                    <div class="yae-detail-row">
                      <i class="bi bi-clock"></i>
                      <span><%= event.formatted_time %></span>
                    </div>
                    <div class="yae-detail-row">
                      <i class="bi bi-geo-alt-fill"></i>
                      <span><%= truncate(event.location, length: 40) %></span>
                    </div>
                  </div>
                  
                  <% if event.ticket_price.present? && event.ticket_price > 0 %>
                    <div class="yae-event-price">
                      <%= number_to_currency(event.ticket_price) %>
                    </div>
                  <% else %>
                    <div class="yae-event-price yae-free">
                      FREE
                    </div>
                  <% end %>
                  
                  <!-- Registration Status -->
                  <div class="yae-registration-status">
                    <% if event.can_register? %>
                      <span class="yae-status-open">
                        <i class="bi bi-check-circle-fill me-1"></i>
                        <%= event.registration_status_text %>
                      </span>
                    <% else %>
                      <span class="yae-status-closed">
                        <i class="bi bi-x-circle-fill me-1"></i>
                        <%= event.registration_status_text %>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-5 d-flex justify-content-center">
        <nav aria-label="Page navigation">
          <%= paginate @events, theme: 'bootstrap-5' %>
        </nav>
      </div>

    <% else %>
      <div class="yae-no-results">
        <div class="text-center py-5">
          <i class="bi bi-calendar-x display-1 text-muted mb-4"></i>
          <h4 class="mb-3">No events found</h4>
          <p class="text-muted mb-4">Check back soon for upcoming literary events!</p>
          <%= link_to "View All Events", events_path, class: "btn btn-yae-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

