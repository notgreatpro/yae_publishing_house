<!-- app/views/devise/sessions/new.html.erb -->

<div class="container">
  <div class="row justify-content-center min-vh-100 align-items-center py-5">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-5">
          <h2 class="text-center mb-4" style="color: #2c3e50; font-size: 1.8em;">Log In</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
            <div class="mb-4">
              <%= f.label :email, class: 'form-label fw-semibold', style: 'color: #2c3e50;' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: 'form-control', 
                  placeholder: 'your.email@example.com',
                  style: 'padding: 12px 15px; border: 2px solid #ddd; border-radius: 8px;' %>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: 'form-label fw-semibold', style: 'color: #2c3e50;' %>
              <%= f.password_field :password, autocomplete: "current-password", 
                  class: 'form-control', 
                  placeholder: '••••••••',
                  style: 'padding: 12px 15px; border: 2px solid #ddd; border-radius: 8px;' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: 'form-check-input' %>
                  <%= f.label :remember_me, class: 'form-check-label' %>
                </div>
              </div>
            <% end %>

            <div class="mt-4">
              <%= f.submit "Log In", class: 'btn w-100', 
                  style: 'padding: 15px; background: #27ae60; color: white; border: none; border-radius: 8px; font-size: 1.1em; font-weight: 600;' %>
            </div>
          <% end %>

          <div class="text-center mt-4 pt-4 border-top">
            <p style="color: #2c3e50; margin: 10px 0;">
              Don't have a Yae Publishing House account? 
              <%= link_to "Sign up", new_customer_registration_path, class: 'text-decoration-none', style: 'color: #3498db;' %>
            </p>
            <p style="margin: 10px 0;">
              <%= link_to "Forgot your password?", new_customer_password_path, class: 'text-decoration-none', style: 'color: #3498db;' %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: #f8f9fa;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #3498db !important;
    box-shadow: none !important;
  }
  
  .btn:hover {
    background: #229954 !important;
  }
  
  .form-check-input:focus {
    border-color: #3498db;
    box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
  }
</style>