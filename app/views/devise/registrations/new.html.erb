<div class="yae-auth-page">
  <div class="container">
    <div class="row justify-content-center min-vh-100 align-items-center py-5">
      <div class="col-md-6 col-lg-5">
        <div class="yae-auth-card">
          <div class="yae-auth-header">
            <h2 class="yae-auth-title">
              <i class="bi bi-person-plus me-2"></i>Create Account
            </h2>
          </div>

          <div class="yae-auth-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="yae-form-group">
                <%= f.label :first_name, class: 'yae-auth-label' %>
                <%= f.text_field :first_name, autofocus: true, class: 'yae-auth-input', 
                    placeholder: 'First name' %>
              </div>

              <div class="yae-form-group">
                <%= f.label :last_name, class: 'yae-auth-label' %>
                <%= f.text_field :last_name, class: 'yae-auth-input', 
                    placeholder: 'Last name' %>
              </div>

              <div class="yae-form-group">
                <%= f.label :email, class: 'yae-auth-label' %>
                <%= f.email_field :email, autocomplete: "email", class: 'yae-auth-input', 
                    placeholder: 'youremail@example.com' %>
              </div>

              <div class="yae-form-group">
                <%= f.label :password, class: 'yae-auth-label' %>
                <% if @minimum_password_length %>
                  <span class="yae-password-hint">(<%= @minimum_password_length %> characters minimum)</span>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: 'yae-auth-input', 
                    placeholder: '••••••••' %>
              </div>

              <div class="yae-form-group">
                <%= f.label :password_confirmation, "Confirm Password", class: 'yae-auth-label' %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                    class: 'yae-auth-input', 
                    placeholder: '••••••••' %>
              </div>

              <div class="yae-form-submit">
                <%= f.submit "Create Account", class: 'btn yae-auth-submit-btn' %>
              </div>
            <% end %>

            <div class="yae-auth-footer">
              <p class="yae-auth-text">
                Already have a Yae Publishing House account? 
                <%= link_to "Log in", new_customer_session_path, class: 'yae-auth-link' %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --yae-pink: #E91E8C;
    --yae-purple: #8B2C7F;
    --yae-dark: #4A1942;
    --yae-light-pink: #F8C8DC;
  }

  .yae-auth-page {
    background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);
    min-height: 100vh;
  }

  .yae-auth-card {
    background: white;
    border-radius: 25px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    border: 3px solid var(--yae-purple);
  }

  .yae-auth-header {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    padding: 2.5rem 2rem;
    text-align: center;
  }

  .yae-auth-title {
    color: white;
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .yae-auth-body {
    padding: 3rem 2.5rem;
  }

  .yae-form-group {
    margin-bottom: 1.5rem;
  }

  .yae-auth-label {
    display: block;
    font-weight: 600;
    color: var(--yae-dark);
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .yae-password-hint {
    color: #6b7280;
    font-weight: 400;
    font-size: 0.875rem;
    font-style: italic;
    margin-left: 0.25rem;
  }

  .yae-auth-input {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #f9fafb;
  }

  .yae-auth-input:focus {
    outline: none;
    border-color: var(--yae-purple);
    box-shadow: 0 0 0 3px rgba(139, 44, 127, 0.1);
    background: white;
  }

  .yae-form-submit {
    margin-top: 2rem;
  }

  .yae-auth-submit-btn {
    width: 100%;
    padding: 1.25rem;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.2rem;
    font-weight: 700;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .yae-auth-submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
    background: linear-gradient(135deg, #059669 0%, #047857 100%);
    color: white;
  }

  .yae-auth-footer {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid #f3f4f6;
    text-align: center;
  }

  .yae-auth-text {
    color: var(--yae-dark);
    font-size: 1rem;
    margin: 0;
  }

  .yae-auth-link {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .yae-auth-link:hover {
    color: var(--yae-purple);
    text-decoration: underline;
  }

  /* Error Messages Styling */
  #error_explanation {
    background: #fee2e2;
    border: 2px solid #dc2626;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  #error_explanation h2 {
    color: #991b1b;
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  #error_explanation ul {
    margin: 0;
    padding-left: 1.5rem;
    color: #991b1b;
  }

  /* Responsive */
  @media (max-width: 576px) {
    .yae-auth-body {
      padding: 2rem 1.5rem;
    }

    .yae-auth-title {
      font-size: 1.5rem;
    }
  }
</style>

<!-- Ensure Bootstrap Icons are loaded -->
