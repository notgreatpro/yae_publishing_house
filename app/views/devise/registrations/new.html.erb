<!-- app/views/devise/registrations/new.html.erb -->

<div class="container">
  <div class="row justify-content-center min-vh-100 align-items-center py-5">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-5">
          <h2 class="text-center mb-4" style="color: #2c3e50; font-size: 1.8em;">Create Account</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-4">
              <%= f.label :first_name, class: 'form-label fw-semibold', style: 'color: #2c3e50;' %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', 
                  placeholder: 'First name', 
                  style: 'padding: 12px 15px; border: 2px solid #ddd; border-radius: 8px;' %>
            </div>

            <div class="mb-4">
              <%= f.label :last_name, class: 'form-label fw-semibold', style: 'color: #2c3e50;' %>
              <%= f.text_field :last_name, class: 'form-control', 
                  placeholder: 'Last name',
                  style: 'padding: 12px 15px; border: 2px solid #ddd; border-radius: 8px;' %>
            </div>

            <div class="mb-4">
              <%= f.label :email, class: 'form-label fw-semibold', style: 'color: #2c3e50;' %>
              <%= f.email_field :email, autocomplete: "email", class: 'form-control', 
                  placeholder: 'youremail@example.com',
                  style: 'padding: 12px 15px; border: 2px solid #ddd; border-radius: 8px;' %>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: 'form-label fw-semibold', style: 'color: #2c3e50;' %>
              <% if @minimum_password_length %>
                <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', 
                  placeholder: '••••••••',
                  style: 'padding: 12px 15px; border: 2px solid #ddd; border-radius: 8px;' %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, "Confirm Password", class: 'form-label fw-semibold', style: 'color: #2c3e50;' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                  class: 'form-control', 
                  placeholder: '••••••••',
                  style: 'padding: 12px 15px; border: 2px solid #ddd; border-radius: 8px;' %>
            </div>

            <div class="mt-4">
              <%= f.submit "Create Account", class: 'btn w-100', 
                  style: 'padding: 15px; background: #27ae60; color: white; border: none; border-radius: 8px; font-size: 1.1em; font-weight: 600;' %>
            </div>
          <% end %>

          <div class="text-center mt-4 pt-4 border-top">
            <p style="color: #2c3e50; margin: 10px 0;">
              Already have an account? 
              <%= link_to "Log in", new_customer_session_path, class: 'text-decoration-none', style: 'color: #3498db;' %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: #f8f9fa;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #3498db !important;
    box-shadow: none !important;
  }
  
  .btn:hover {
    background: #229954 !important;
  }
</style>