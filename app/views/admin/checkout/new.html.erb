<div class="checkout-container">
  <h1>ðŸ›’ Checkout</h1>

  <div class="checkout-grid">
    <!-- Left Column: Order Summary -->
    <div class="order-summary">
      <h2>Order Summary</h2>
      
      <div class="cart-items">
        <% @cart_items.each do |item| %>
          <div class="cart-item">
            <div class="item-details">
              <h3><%= item[:product].title %></h3>
              <p class="item-meta">Quantity: <%= item[:quantity] %></p>
            </div>
            <div class="item-price">
              <%= number_to_currency(item[:product].current_price * item[:quantity]) %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="order-totals">
        <div class="total-row">
          <span>Subtotal:</span>
          <span><%= number_to_currency(@subtotal) %></span>
        </div>
        <div class="total-row tax-note">
          <span>Tax:</span>
          <span>Calculated based on province</span>
        </div>
      </div>
    </div>

    <!-- Right Column: Shipping Address -->
    <div class="shipping-form">
      <h2>Shipping Address</h2>

      <%= form_with url: checkout_path, method: :post, local: true do |f| %>
        
        <% if @customer.has_complete_address? %>
          <div class="saved-address">
            <label class="checkbox-label">
              <%= check_box_tag :use_saved_address, '1', true, id: 'use_saved_address' %>
              Use my saved address
            </label>

            <div class="address-preview" id="saved-address-preview">
              <p><%= @customer.address_line1 %></p>
              <% if @customer.address_line2.present? %>
                <p><%= @customer.address_line2 %></p>
              <% end %>
              <p><%= @customer.city %>, <%= @customer.province.name %></p>
              <p><%= @customer.postal_code %></p>
            </div>
          </div>

          <div class="divider">OR</div>
        <% end %>

        <div id="new-address-fields" style="<%= 'display: none;' if @customer.has_complete_address? %>">
          <div class="form-group">
            <%= label_tag :address_line1, "Address Line 1" %>
            <%= text_field_tag :address_line1, @customer.address_line1, class: 'form-input', placeholder: "123 Main Street", required: true %>
          </div>

          <div class="form-group">
            <%= label_tag :address_line2, "Address Line 2 (Optional)" %>
            <%= text_field_tag :address_line2, @customer.address_line2, class: 'form-input', placeholder: "Apt 4B" %>
          </div>

          <div class="form-row">
            <div class="form-group">
              <%= label_tag :city, "City" %>
              <%= text_field_tag :city, @customer.city, class: 'form-input', placeholder: "Winnipeg", required: true %>
            </div>

            <div class="form-group">
              <%= label_tag :postal_code, "Postal Code" %>
              <%= text_field_tag :postal_code, @customer.postal_code, class: 'form-input', placeholder: "R3C 0V8", required: true %>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :province_id, "Province/Territory" %>
            <%= select_tag :province_id, 
                options_from_collection_for_select(Province.order(:name), :id, :name, @customer.province_id), 
                { prompt: 'Select your province...', class: 'form-input', required: true } %>
          </div>
        </div>

        <div class="form-actions">
          <%= submit_tag "Place Order", class: 'btn-primary' %>
          <%= link_to "Back to Cart", cart_path, class: 'btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const checkbox = document.getElementById('use_saved_address');
    const savedAddress = document.getElementById('saved-address-preview');
    const newAddressFields = document.getElementById('new-address-fields');

    if (checkbox) {
      checkbox.addEventListener('change', function() {
        if (this.checked) {
          if (savedAddress) savedAddress.style.display = 'block';
          if (newAddressFields) newAddressFields.style.display = 'none';
        } else {
          if (savedAddress) savedAddress.style.display = 'none';
          if (newAddressFields) newAddressFields.style.display = 'block';
        }
      });
    }
  });
</script>

