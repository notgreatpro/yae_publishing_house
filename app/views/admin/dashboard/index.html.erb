<h1> Admin Dashboard</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin: 2rem 0;">
  <div style="background: #e3f2fd; padding: 1.5rem; border-radius: 8px;">
    <h3 style="margin: 0 0 0.5rem 0; color: #1976d2;"> Products</h3>
    <p style="font-size: 2rem; font-weight: bold; margin: 0 0 0.5rem 0;"><%= @total_products %></p>
    <%= link_to "Manage Products ", admin_products_path, style: "color: #1976d2; text-decoration: none; font-weight: bold;" %>
  </div>

  <div style="background: #f3e5f5; padding: 1.5rem; border-radius: 8px;">
    <h3 style="margin: 0 0 0.5rem 0; color: #7b1fa2;"> Categories</h3>
    <p style="font-size: 2rem; font-weight: bold; margin: 0;"><%= @total_categories %></p>
  </div>

  <div style="background: #fff3e0; padding: 1.5rem; border-radius: 8px;">
    <h3 style="margin: 0 0 0.5rem 0; color: #f57c00;"> Authors</h3>
    <p style="font-size: 2rem; font-weight: bold; margin: 0;"><%= @total_authors %></p>
  </div>

  <div style="background: #e8f5e9; padding: 1.5rem; border-radius: 8px;">
    <h3 style="margin: 0 0 0.5rem 0; color: #388e3c;">Customers</h3>
    <p style="font-size: 2rem; font-weight: bold; margin: 0;"><%= @total_customers %></p>
  </div>
</div>

<div style="margin-top: 2rem;">
  <h2>Quick Actions</h2>
  <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
    <%= link_to " Manage Products", admin_products_path, style: "background: #5b7c99; color: white; padding: 1rem 1.5rem; border-radius: 4px; text-decoration: none; font-weight: bold;" %>
    <%= link_to "Add New Product", new_admin_product_path, style: "background: #28a745; color: white; padding: 1rem 1.5rem; border-radius: 4px; text-decoration: none; font-weight: bold;" %>
  </div>
</div>