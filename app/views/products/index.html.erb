<!-- app/views/products/index.html.erb -->
<div class="yae-products-page">
  
  <!-- Enhanced Hero Header with CTA -->
  <div class="yae-hero">
    <div class="container-fluid px-lg-5">
      <div class="text-center py-5">
        <h1 class="display-3 fw-bold text-white mb-3 animate-fade-in">
          Yae Publishing House
        </h1>
        <p class="lead text-white-50 fst-italic mb-4">
          Inazuma's biggest book publishing since 1984!
        </p>
        <div class="hero-cta">
          <%= link_to products_path(filter: 'new'), class: "btn btn-hero-cta me-3" do %>
            <i class="bi bi-star-fill me-2"></i>Explore New Arrivals
          <% end %>
          <%= link_to products_path, class: "btn btn-hero-cta-outline" do %>
            <i class="bi bi-book-half me-2"></i>Browse All Books
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/active_promotions' %>

  <div class="container-fluid px-lg-5 py-5">
    
    <!-- Featured/Bestseller Section -->
    <% if @products && @products.limit(5).any? %>
      <div class="mb-5">
        <div class="section-header text-center mb-4">
          <h2 class="fw-bold" style="color: var(--yae-purple);">
            <i class="bi bi-trophy-fill me-2"></i>Featured Bestsellers
          </h2>
          <p class="text-muted">Discover our most loved books by readers</p>
        </div>
        
        <div class="yae-featured-slider mb-4">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
            <% @products.limit(5).each do |product| %>
              <div class="col">
                <%= link_to product_path(product), class: 'text-decoration-none' do %>
                  <div class="yae-featured-card h-100">
                    <div class="yae-featured-image">
                      <% if product.cover_image.attached? %>
                        <%= image_tag product.medium_image, alt: product.title %>
                      <% else %>
                        <div class="yae-product-placeholder">
                          <i class="bi bi-book"></i>
                        </div>
                      <% end %>
                      <div class="yae-featured-overlay">
                        <span class="yae-quick-view">Quick View</span>
                      </div>
                    </div>
                    <div class="yae-featured-info text-center p-3">
                      <h6 class="mb-2 fw-bold"><%= truncate(product.title, length: 40) %></h6>
                      <% if product.average_rating > 0 %>
                        <div class="mb-2">
                          <%= render 'shared/star_rating', rating: product.average_rating %>
                        </div>
                      <% end %>
                      <p class="yae-featured-price mb-0"><%= number_to_currency(product.current_price) %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Browse by Category -->
    <% if @categories && @categories.any? %>
      <div class="mb-5">
        <div class="section-header text-center mb-4">
          <h2 class="fw-bold" style="color: var(--yae-purple);">
            <i class="bi bi-bookshelf me-2"></i>Browse by Category
          </h2>
          <p class="text-muted">Find your next great read by genre</p>
        </div>
        <div class="d-flex flex-wrap justify-content-center gap-3">
          <% @categories.each do |category| %>
            <%= link_to category_path(category), class: "btn btn-category" do %>
              <i class="bi bi-tag-fill me-2"></i><%= category.category_name %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Enhanced Search Section -->
    <div class="card yae-search-card shadow-lg mb-5 mx-auto">
      <div class="card-body p-4">
        <h3 class="card-title text-center mb-4 fw-bold" style="color: var(--yae-purple);">
          <i class="bi bi-search me-2"></i>Find Your Perfect Book
        </h3>
        <%= form_with url: search_products_path, method: :get, class: "row g-3" do |f| %>
          <div class="col-md-5">
            <%= f.text_field :keyword, 
                class: "form-control form-control-lg yae-input", 
                placeholder: "Search by title or description...",
                value: params[:keyword] %>
          </div>
          <div class="col-md-4">
            <%= f.select :category_id, 
                options_for_select([['All Categories', '']] + @categories.map { |c| [c.category_name, c.id] }, params[:category_id]),
                {},
                class: "form-select form-select-lg yae-input" %>
          </div>
          <div class="col-md-3">
            <%= f.submit "Search", class: "btn btn-yae-search btn-lg w-100" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Trust Badges Section -->
    <div class="yae-trust-section mb-5">
      <div class="row g-4 text-center">
        <div class="col-6 col-md-3">
          <div class="yae-trust-badge">
            <i class="bi bi-truck display-4 mb-3"></i>
            <h6 class="fw-bold">Free Shipping</h6>
            <p class="small text-muted mb-0">On orders over $50</p>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="yae-trust-badge">
            <i class="bi bi-arrow-clockwise display-4 mb-3"></i>
            <h6 class="fw-bold">Easy Returns</h6>
            <p class="small text-muted mb-0">30-day return policy</p>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="yae-trust-badge">
            <i class="bi bi-shield-check display-4 mb-3"></i>
            <h6 class="fw-bold">Secure Payment</h6>
            <p class="small text-muted mb-0">100% secure checkout</p>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="yae-trust-badge">
            <i class="bi bi-headset display-4 mb-3"></i>
            <h6 class="fw-bold">24/7 Support</h6>
            <p class="small text-muted mb-0">Here to help you</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Filter Buttons -->
    <div class="text-center mb-5">
      <div class="btn-group-yae" role="group">
        <%= link_to products_path, 
            class: "btn btn-filter #{params[:filter].blank? ? 'active' : ''}" do %>
          <i class="bi bi-grid-3x3-gap-fill me-2"></i>All Products
        <% end %>
        <%= link_to products_path(filter: 'new'), 
            class: "btn btn-filter #{params[:filter] == 'new' ? 'active' : ''}" do %>
          <i class="bi bi-star-fill me-2"></i>New Arrivals
        <% end %>
        <%= link_to products_path(filter: 'updated'), 
            class: "btn btn-filter #{params[:filter] == 'updated' ? 'active' : ''}" do %>
          <i class="bi bi-clock-history me-2"></i>Recently Updated
        <% end %>
      </div>
    </div>

    <!-- Products Grid -->
    <% if @products && @products.any? %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4 mb-5">
        <% @products.each do |product| %>
          <div class="col">
            <div class="yae-product-card h-100">
              
              <!-- Badges -->
              <% if product.created_at >= 3.days.ago %>
                <span class="yae-badge yae-badge-new">
                  <i class="bi bi-star-fill me-1"></i>NEW
                </span>
              <% end %>
              
              <% if product.on_sale %>
                <span class="yae-badge yae-badge-sale">
                  <i class="bi bi-tag-fill me-1"></i>SALE
                </span>
              <% end %>
              
              <!-- Product Image -->
              <%= link_to product_path(product), class: 'yae-product-image-link' do %>
                <div class="yae-product-image">
                  <% if product.cover_image.attached? %>
                    <%= image_tag product.medium_image, alt: product.title %>
                  <% else %>
                    <div class="yae-product-placeholder">
                      <i class="bi bi-book"></i>
                    </div>
                  <% end %>
                  <div class="yae-product-overlay">
                    <span class="yae-view-btn">
                      <i class="bi bi-eye-fill me-2"></i>View Details
                    </span>
                  </div>
                </div>
              <% end %>
              
              <!-- Wishlist Icon -->
              <% if customer_signed_in? %>
                <% if current_customer.wishlists.exists?(product: product) %>
                  <%= button_to remove_from_wishlist_path(product_id: product.id), method: :delete, class: "yae-wishlist-btn active", title: "Remove from Wishlist", data: { turbo: false }, form: { style: 'display: inline;' } do %>
                    <i class="bi bi-heart-fill"></i>
                  <% end %>
                <% else %>
                  <%= button_to wishlists_path(product_id: product.id), method: :post, class: "yae-wishlist-btn", title: "Add to Wishlist", data: { turbo: false }, form: { style: 'display: inline;' } do %>
                    <i class="bi bi-heart"></i>
                  <% end %>
                <% end %>
              <% else %>
                <%= link_to new_customer_session_path, class: "yae-wishlist-btn", title: "Sign in to add to wishlist" do %>
                  <i class="bi bi-heart"></i>
                <% end %>
              <% end %>

              <!-- Card Info -->
              <%= link_to product_path(product), class: 'text-decoration-none yae-product-info-link' do %>
                <div class="yae-product-info">
                  <h6 class="yae-product-title">
                    <%= truncate(product.title, length: 50) %>
                  </h6>
                  
                  <% if product.authors.any? %>
                    <p class="yae-product-author">
                      <%= product.authors.first.author_name %>
                    </p>
                  <% end %>

                  <!-- Rating -->
                  <% if product.average_rating > 0 %>
                    <div class="yae-product-rating">
                      <div class="yae-stars">
                        <%= render 'shared/star_rating', rating: product.average_rating %>
                      </div>
                      <span class="yae-rating-count">
                        (<%= product.ratings_count %>)
                      </span>
                    </div>
                  <% end %>
                  
                  <!-- Price -->
                  <div class="yae-product-price">
                    <%= number_to_currency(product.current_price) %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-5 d-flex justify-content-center">
        <nav aria-label="Page navigation">
          <%= paginate @products, theme: 'bootstrap-5' %>
        </nav>
      </div>

    <% else %>
      <div class="yae-no-results">
        <div class="text-center py-5">
          <i class="bi bi-search display-1 text-muted mb-4"></i>
          <h4 class="mb-3">No products found</h4>
          <p class="text-muted mb-4">Try adjusting your search or browse all products.</p>
          <%= link_to "View All Products", products_path, class: "btn btn-yae-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <!-- Newsletter Section -->
    <div class="yae-newsletter-section mt-5 mb-4">
      <div class="yae-newsletter-card">
        <div class="row align-items-center">
          <div class="col-lg-6 mb-4 mb-lg-0 text-center text-lg-start">
            <h3 class="fw-bold mb-3">
              <i class="bi bi-envelope-heart me-2"></i>Join Our Book Club
            </h3>
            <p class="mb-0">Subscribe to get exclusive deals, new releases, and reading recommendations!</p>
          </div>
          <div class="col-lg-6">
            <form class="yae-newsletter-form">
              <div class="input-group input-group-lg">
                <input type="email" class="form-control yae-newsletter-input" placeholder="Enter your email address" required>
                <button class="btn btn-yae-newsletter" type="submit">
                  <i class="bi bi-send-fill me-2"></i>Subscribe
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --yae-pink: #E91E8C;
    --yae-purple: #8B2C7F;
    --yae-dark: #4A1942;
    --yae-light-pink: #F8C8DC;
  }

  .yae-products-page {
    background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);
    min-height: 100vh;
  }

  /* Hero Section */
  .yae-hero {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    border-bottom: 4px solid var(--yae-pink);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-hero-cta {
    background: linear-gradient(135deg, var(--yae-pink) 0%, #d91479 100%);
    color: white;
    border: none;
    padding: 1rem 2.5rem;
    border-radius: 30px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.95rem;
  }

  .btn-hero-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(233, 30, 140, 0.5);
    color: white;
  }

  .btn-hero-cta-outline {
    background: transparent;
    color: white;
    border: 2px solid white;
    padding: 1rem 2.5rem;
    border-radius: 30px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.95rem;
  }

  .btn-hero-cta-outline:hover {
    background: white;
    color: var(--yae-purple);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.3);
  }

  /* Section Headers */
  .section-header h2 {
    position: relative;
    display: inline-block;
    padding-bottom: 1rem;
  }

  .section-header h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: linear-gradient(135deg, var(--yae-pink) 0%, var(--yae-purple) 100%);
    border-radius: 2px;
  }

  /* Featured Bestsellers */
  .yae-featured-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .yae-featured-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(139, 44, 127, 0.3);
  }

  .yae-featured-image {
    width: 100%;
    aspect-ratio: 2/3;
    position: relative;
    overflow: hidden;
    background: #f8f9fa;
  }

  .yae-featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .yae-featured-card:hover .yae-featured-image img {
    transform: scale(1.08);
  }

  .yae-featured-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top, rgba(139, 44, 127, 0.95) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 1.5rem;
  }

  .yae-featured-card:hover .yae-featured-overlay {
    opacity: 1;
  }

  .yae-quick-view {
    background: white;
    color: var(--yae-purple);
    padding: 0.6rem 1.5rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .yae-featured-info {
    background: white;
  }

  .yae-featured-price {
    font-size: 1.25rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--yae-pink) 0%, var(--yae-purple) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Trust Badges */
  .yae-trust-section {
    background: white;
    border-radius: 20px;
    padding: 2.5rem 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .yae-trust-badge i {
    color: var(--yae-purple);
    transition: all 0.3s ease;
  }

  .yae-trust-badge:hover i {
    transform: scale(1.1);
    color: var(--yae-pink);
  }

  .yae-trust-badge h6 {
    color: var(--yae-dark);
  }

  /* Category Buttons */
  .btn-category {
    background: white;
    color: var(--yae-purple);
    border: 2px solid var(--yae-purple);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .btn-category:hover {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    color: white;
    border-color: var(--yae-pink);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(139, 44, 127, 0.3);
  }

  /* Search Card */
  .yae-search-card {
    max-width: 900px;
    border: 3px solid var(--yae-purple);
    border-radius: 20px;
    background: white;
  }

  .yae-input {
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .yae-input:focus {
    border-color: var(--yae-purple);
    box-shadow: 0 0 0 0.2rem rgba(139, 44, 127, 0.25);
  }

  .btn-yae-search {
    background: linear-gradient(135deg, var(--yae-pink) 0%, #d91479 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn-yae-search:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(233, 30, 140, 0.4);
    background: linear-gradient(135deg, #d91479 0%, var(--yae-pink) 100%);
  }

  /* Filter Buttons */
  .btn-group-yae {
    display: inline-flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .btn-filter {
    background: white;
    color: var(--yae-purple);
    border: 2px solid var(--yae-purple);
    padding: 0.75rem 2rem;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }

  .btn-filter:hover {
    background: linear-gradient(135deg, var(--yae-light-pink) 0%, #e9d5ff 100%);
    color: var(--yae-purple);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(139, 44, 127, 0.2);
  }

  .btn-filter.active {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    color: white;
    border-color: var(--yae-pink);
  }

  /* Product Card */
  .yae-product-link {
    display: block;
    height: 100%;
  }

  .yae-product-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .yae-product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 30px rgba(139, 44, 127, 0.3);
  }

  /* Wishlist Button */
  .yae-wishlist-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    border: none;
    color: var(--yae-pink);
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    text-decoration: none;
    padding: 0;
  }

  .yae-wishlist-btn:hover {
    background: var(--yae-pink);
    color: white;
    transform: scale(1.1);
  }

  .yae-wishlist-btn.active {
    background: var(--yae-pink);
    color: white;
  }

  .yae-wishlist-btn i {
    pointer-events: none;
  }

  /* Product Image */
  .yae-product-image {
    width: 100%;
    aspect-ratio: 2/3;
    position: relative;
    overflow: hidden;
    background: #f8f9fa;
  }

  .yae-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .yae-product-card:hover .yae-product-image img {
    transform: scale(1.05);
  }

  .yae-product-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 4rem;
  }

  /* Product Overlay */
  .yae-product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top, rgba(139, 44, 127, 0.9) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 1rem;
  }

  .yae-product-card:hover .yae-product-overlay {
    opacity: 1;
  }

  .yae-view-btn {
    background: white;
    color: var(--yae-purple);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .yae-product-card:hover .yae-view-btn {
    transform: translateY(0);
  }

  /* Badges */
  .yae-badge {
    position: absolute;
    top: 10px;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    z-index: 10;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    display: inline-flex;
    align-items: center;
  }

  .yae-badge-new {
    left: 10px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
  }

  .yae-badge-sale {
    right: 60px;
    background: linear-gradient(135deg, var(--yae-pink) 0%, #d91479 100%);
    color: white;
  }

  /* Product Info */
  .yae-product-info {
    padding: 1.25rem;
  }

  .yae-product-title {
    font-size: 0.95rem;
    line-height: 1.4;
