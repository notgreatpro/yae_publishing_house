<!-- app/views/products/index.html.erb -->
<div class="container-fluid py-5" style="background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%); min-height: 100vh;">
  
  <!-- Header -->
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-dark">Yae Publishing House</h1>
    <p class="lead text-muted fst-italic">Inazumas biggest book publishing since 1984!</p>
  </div>

  <!-- Feature 2.2: Browse by Category -->
  <% if @categories && @categories.any? %>
    <div class="mb-5">
      <h2 class="text-center mb-4 fw-bold">Browse by Category</h2>
      <div class="d-flex flex-wrap justify-content-center gap-3">
        <% @categories.each do |category| %>
          <%= link_to category.category_name, category_path(category), 
              class: "btn btn-dark btn-lg shadow-sm hover-lift" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Feature 2.6: Search Section -->
  <div class="card shadow-lg mb-5 mx-auto" style="max-width: 900px;">
    <div class="card-body p-4">
      <h3 class="card-title text-center mb-4 fw-bold">Search Books</h3>
      <%= form_with url: search_products_path, method: :get, class: "row g-3" do |f| %>
        <div class="col-md-5">
          <%= f.text_field :keyword, 
              class: "form-control form-control-lg", 
              placeholder: "Search by title or description...",
              value: params[:keyword] %>
        </div>
        <div class="col-md-4">
          <%= f.select :category_id, 
              options_for_select([['All Categories', '']] + @categories.map { |c| [c.category_name, c.id] }, params[:category_id]),
              {},
              class: "form-select form-select-lg" %>
        </div>
        <div class="col-md-3">
          <%= f.submit "Search", class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Feature 2.4: Filter Buttons -->
  <div class="text-center mb-4">
    <%= link_to "All Products", products_path, 
        class: "btn btn-lg mx-2 shadow-sm #{params[:filter].blank? ? 'btn-info' : 'btn-outline-info'}" %>
    <%= link_to "New Arrivals", products_path(filter: 'new'), 
        class: "btn btn-lg mx-2 shadow-sm #{params[:filter] == 'new' ? 'btn-success' : 'btn-outline-success'}" %>
    <%= link_to "Recently Updated", products_path(filter: 'updated'), 
        class: "btn btn-lg mx-2 shadow-sm #{params[:filter] == 'updated' ? 'btn-warning' : 'btn-outline-warning'}" %>
  </div>

  <!-- Products Grid -->
  <div class="container">
    <% if @products && @products.any? %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% @products.each do |product| %>
          <div class="col">
            <div class="card h-100 shadow hover-lift border-0 position-relative">
              
              <!-- New Badge -->
              <% if product.created_at > 3.days.ago %>
                <span class="position-absolute top-0 start-0 m-2 badge bg-success" style="z-index: 10;">
                  NEW
                </span>
              <% end %>

              <!-- Product Image -->
              <div class="product-image-wrapper">
                <% if product.cover_image.attached? %>
                  <%= link_to product_path(product) do %>
                    <%= image_tag product.cover_image, class: "product-image", alt: product.title %>
                  <% end %>
                <% else %>
                  <%= link_to product_path(product) do %>
                    <div class="product-placeholder d-flex align-items-center justify-content-center">
                      <i class="bi bi-book text-white" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                  <% end %>
                <% end %>
              </div>

              <!-- Card Body -->
              <div class="card-body d-flex flex-column p-3">
                <!-- Title -->
                <h5 class="card-title product-title mb-2">
                  <%= link_to product.title, product_path(product), class: "text-decoration-none text-dark fw-bold" %>
                </h5>
                
                <!-- Description -->
                <p class="card-text text-muted small flex-grow-1 mb-3">
                  <%= truncate(product.description, length: 85) %>
                </p>

                <!-- Price -->
                <div class="mb-2">
                  <span class="h5 fw-bold text-primary mb-0">
                    <%= number_to_currency(product.current_price) %>
                  </span>
                </div>

                <!-- View Details Button -->
                <%= link_to "View Details", product_path(product), class: "btn btn-primary w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Feature 2.5: Pagination -->
      <div class="mt-5 d-flex justify-content-center">
        <%= paginate @products, theme: 'bootstrap-5' %>
      </div>

    <% else %>
      <div class="alert alert-info text-center py-5" role="alert">
        <h4 class="alert-heading fs-2 mb-3">No products found</h4>
        <p class="fs-5 mb-4">Try adjusting your search or browse all products.</p>
        <%= link_to "View All Products", products_path, class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  /* Card styling */
  .card {
    border-radius: 10px;
    overflow: hidden;
    background: white;
  }

  /* Hover effects */
  .hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.15) !important;
  }

  /* Product image wrapper - TALLER for book covers */
  .product-image-wrapper {
    width: 100%;
    height: 400px;  /* Increased from 350px */
    overflow: hidden;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;  /* Added padding around image */
  }

  /* Product images - show full book cover without cropping */
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: contain;  /* Show entire image, no cropping */
    object-position: center;
  }

  /* Placeholder for no image */
  .product-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  /* Product title - 2 lines max */
  .product-title {
    font-size: 1rem;
    line-height: 1.4;
    height: 2.8rem;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .product-title a:hover {
    color: #0d6efd !important;
  }

  /* Card body - compact spacing */
  .card-body {
    min-height: 200px;
  }

  /* Description text - 3 lines max */
  .card-text {
    line-height: 1.5;
    height: 4.5rem;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  /* Price styling */
  .h5 {
    font-size: 1.5rem;
  }

  /* Button styling */
  .btn-primary {
    border-radius: 6px;
    padding: 0.6rem 1rem;
    font-weight: 600;
  }

  .btn:hover {
    transform: translateY(-2px);
    transition: all 0.2s ease;
  }

  /* Badge styling */
  .badge {
    border-radius: 6px;
    padding: 0.45rem 0.7rem;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  /* Category buttons */
  .btn-lg {
    border-radius: 8px;
  }
</style>