<script>
  // Newsletter form submission
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('.yae-newsletter-form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const emailInput = this.querySelector('input[type="email"]');
        const submitBtn = this.querySelector('.btn-yae-newsletter');
        const originalText = submitBtn.innerHTML;
        
        // Show loading state
        submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Subscribing...';
        submitBtn.disabled = true;
        
        // Simulate API call (replace with actual AJAX)
        setTimeout(() => {
          // Success feedback
          submitBtn.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i>Subscribed!';
          submitBtn.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
          emailInput.value = '';
          
          // Show toast
          showToast('Thanks for subscribing!');
          
          // Reset after 3 seconds
          setTimeout(() => {
            submitBtn.innerHTML = originalText;
            submitBtn.style.background = '';
            submitBtn.disabled = false;
          }, 3000);
        }, 1000);
        
        // You can add AJAX call here to save to backend
        // Example:
        // fetch('/newsletter/subscribe', {
        //   method: 'POST',
        //   headers: { 'Content-Type': 'application/json' },
        //   body: JSON.stringify({ email: emailInput.value })
        // });
      });
    }
  });

  // Simple toast notification (you can replace with Bootstrap toast)
  function showToast(message) {
    const toast = document.createElement('div');
    toast.style.cssText = `
      position: fixed;
      top: 20px;
      right: 20px;
      background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
      color: white;
      padding: 1rem 1.5rem;
      border-radius: 12px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
      z-index: 9999;
      animation: slideIn 0.3s ease-out;
      font-weight: 600;
    `;
    toast.innerHTML = `<i class="bi bi-check-circle-fill me-2"></i>${message}`;
    document.body.appendChild(toast);
    
    setTimeout(() => {
      toast.style.animation = 'slideOut 0.3s ease-out';
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  // Add animation keyframes
  const style = document.createElement('style');
  style.textContent = `
    @keyframes slideIn {
      from {
        transform: translateX(400px);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
    @keyframes slideOut {
      from {
        transform: translateX(0);
        opacity: 1;
      }
      to {
        transform: translateX(400px);
        opacity: 0;
      }
    }
  `;
  document.head.appendChild(style);
</script>

