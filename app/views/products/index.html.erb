<!-- app/views/products/index.html.erb -->
<div class="container-fluid py-5" style="background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%); min-height: 100vh;">
  
  <!-- Header -->
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-dark">Yae Publishing House</h1>
    <p class="lead text-muted fst-italic">Inazumas biggest book publishing since 1984!</p>
  </div>

  <!-- Feature 2.2: Browse by Category -->
  <% if @categories && @categories.any? %>
    <div class="mb-5">
      <h2 class="text-center mb-4 fw-bold">Browse by Category</h2>
      <div class="d-flex flex-wrap justify-content-center gap-3">
        <% @categories.each do |category| %>
          <%= link_to category.category_name, category_path(category), 
              class: "btn btn-dark btn-lg shadow-sm hover-lift" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Feature 2.6: Search Section -->
  <div class="card shadow-lg mb-5 mx-auto" style="max-width: 900px;">
    <div class="card-body p-4">
      <h3 class="card-title text-center mb-4 fw-bold">Search Books</h3>
      <%= form_with url: search_products_path, method: :get, class: "row g-3" do |f| %>
        <div class="col-md-5">
          <%= f.text_field :keyword, 
              class: "form-control form-control-lg", 
              placeholder: "Search by title or description...",
              value: params[:keyword] %>
        </div>
        <div class="col-md-4">
          <%= f.select :category_id, 
              options_for_select([['All Categories', '']] + @categories.map { |c| [c.category_name, c.id] }, params[:category_id]),
              {},
              class: "form-select form-select-lg" %>
        </div>
        <div class="col-md-3">
          <%= f.submit "Search", class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Feature 2.4: Filter Buttons -->
  <div class="text-center mb-4">
    <%= link_to "All Products", products_path, 
        class: "btn btn-lg mx-2 shadow-sm #{params[:filter].blank? ? 'btn-info' : 'btn-outline-info'}" %>
    <%= link_to "New Arrivals", products_path(filter: 'new'), 
        class: "btn btn-lg mx-2 shadow-sm #{params[:filter] == 'new' ? 'btn-success' : 'btn-outline-success'}" %>
    <%= link_to "Recently Updated", products_path(filter: 'updated'), 
        class: "btn btn-lg mx-2 shadow-sm #{params[:filter] == 'updated' ? 'btn-warning' : 'btn-outline-warning'}" %>
  </div>

  <!-- Products Grid -->
  <div class="container">
    <% if @products && @products.any? %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% @products.each do |product| %>
          <div class="col">
            <div class="card h-100 shadow hover-lift border-0 position-relative">
              
              <!-- New Badge -->
              <% if product.created_at > 3.days.ago %>
                <span class="position-absolute top-0 start-0 m-2 badge bg-success" style="z-index: 10;">
                  NEW
                </span>
              <% end %>

              <!-- Product Image -->
              <div class="product-image-wrapper">
                <% if product.cover_image.attached? %>
                  <%= link_to product_path(product) do %>
                    <%= image_tag product.thumbnail, class: "product-image", alt: product.title %>
                  <% end %>
                <% else %>
                  <%= link_to product_path(product) do %>
                    <div class="product-placeholder">
                      <div class="placeholder-content">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-book text-white mb-3" viewBox="0 0 16 16" style="opacity: 0.7;">
                          <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                        </svg>
                        <p class="text-white mb-0 fw-semibold">No Image Available</p>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>

              <!-- Card Body -->
              <div class="card-body d-flex flex-column p-3">
                <!-- Title -->
                <h5 class="card-title product-title mb-2">
                  <%= link_to product.title, product_path(product), class: "text-decoration-none text-dark fw-bold" %>
                </h5>
                
                <!-- Description -->
                <p class="card-text text-muted small flex-grow-1 mb-3">
                  <%= truncate(product.description, length: 85) %>
                </p>

                <!-- Price -->
                <div class="mb-2">
                  <span class="h5 fw-bold text-primary mb-0">
                    <%= number_to_currency(product.current_price) %>
                  </span>
                </div>

                <!-- View Details Button -->
                <%= link_to "View Details", product_path(product), class: "btn btn-primary w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Feature 2.5: Pagination -->
      <div class="mt-5 d-flex justify-content-center">
        <%= paginate @products, theme: 'bootstrap-5' %>
      </div>

    <% else %>
      <div class="alert alert-info text-center py-5" role="alert">
        <h4 class="alert-heading fs-2 mb-3">No products found</h4>
        <p class="fs-5 mb-4">Try adjusting your search or browse all products.</p>
        <%= link_to "View All Products", products_path, class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  /* Card styling */
  .card {
    border-radius: 10px;
    overflow: hidden;
    background: white;
  }

  /* Hover effects */
  .hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.15) !important;
  }

  /* Product image wrapper */
  .product-image-wrapper {
    width: 100%;
    height: 400px;
    overflow: hidden;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  /* Product images */
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }

  /* Professional placeholder for missing images */
  .product-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  /* Subtle pattern overlay for placeholder */
  .product-placeholder::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 10px,
        rgba(255,255,255,0.03) 10px,
        rgba(255,255,255,0.03) 20px
      );
  }

  .placeholder-content {
    text-align: center;
    z-index: 1;
    position: relative;
  }

  /* Product title */
  .product-title {
    font-size: 1rem;
    line-height: 1.4;
    height: 2.8rem;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .product-title a:hover {
    color: #0d6efd !important;
  }

  /* Card body */
  .card-body {
    min-height: 200px;
  }

  /* Description text */
  .card-text {
    line-height: 1.5;
    height: 4.5rem;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  /* Price styling */
  .h5 {
    font-size: 1.5rem;
  }

  /* Button styling */
  .btn-primary {
    border-radius: 6px;
    padding: 0.6rem 1rem;
    font-weight: 600;
  }

  .btn:hover {
    transform: translateY(-2px);
    transition: all 0.2s ease;
  }

  /* Badge styling */
  .badge {
    border-radius: 6px;
    padding: 0.45rem 0.7rem;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  /* Category buttons */
  .btn-lg {
    border-radius: 8px;
  }

  /* Smooth transitions */
  .product-image, .product-placeholder {
    transition: transform 0.3s ease;
  }

  .card:hover .product-image,
  .card:hover .product-placeholder {
    transform: scale(1.02);
  }
</style>