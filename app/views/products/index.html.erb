<!-- app/views/products/index.html.erb -->
<div class="yae-products-page">
  
  <!-- Hero Header -->
  <div class="yae-hero">
    <div class="container-fluid px-lg-5">
      <div class="text-center py-5">
        <h1 class="display-3 fw-bold text-white mb-3 animate-fade-in">
          Yae Publishing House
        </h1>
        <p class="lead text-white-50 fst-italic mb-0">
          Inazuma's biggest book publishing since 1984!
        </p>
      </div>
    </div>
  </div>
  <%= render 'shared/active_promotions' %>
  <div class="container-fluid px-lg-5 py-5">
    
    <!-- Browse by Category -->
    <% if @categories && @categories.any? %>
      <div class="mb-5">
        <h2 class="text-center mb-4 fw-bold" style="color: var(--yae-purple);">
          <i class="bi bi-bookshelf me-2"></i>Browse by Category
        </h2>
        <div class="d-flex flex-wrap justify-content-center gap-3">
          <% @categories.each do |category| %>
            <%= link_to category_path(category), class: "btn btn-category" do %>
              <i class="bi bi-tag-fill me-2"></i><%= category.category_name %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Search Section -->
    <div class="card yae-search-card shadow-lg mb-5 mx-auto">
      <div class="card-body p-4">
        <h3 class="card-title text-center mb-4 fw-bold" style="color: var(--yae-purple);">
          <i class="bi bi-search me-2"></i>Search Books
        </h3>
        <%= form_with url: search_products_path, method: :get, class: "row g-3" do |f| %>
          <div class="col-md-5">
            <%= f.text_field :keyword, 
                class: "form-control form-control-lg yae-input", 
                placeholder: "Search by title or description...",
                value: params[:keyword] %>
          </div>
          <div class="col-md-4">
            <%= f.select :category_id, 
                options_for_select([['All Categories', '']] + @categories.map { |c| [c.category_name, c.id] }, params[:category_id]),
                {},
                class: "form-select form-select-lg yae-input" %>
          </div>
          <div class="col-md-3">
            <%= f.submit "Search", class: "btn btn-yae-search btn-lg w-100" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Filter Buttons -->
    <div class="text-center mb-5">
      <div class="btn-group-yae" role="group">
        <%= link_to products_path, 
            class: "btn btn-filter #{params[:filter].blank? ? 'active' : ''}" do %>
          <i class="bi bi-grid-3x3-gap-fill me-2"></i>All Products
        <% end %>
        <%= link_to products_path(filter: 'new'), 
            class: "btn btn-filter #{params[:filter] == 'new' ? 'active' : ''}" do %>
          <i class="bi bi-star-fill me-2"></i>New Arrivals
        <% end %>
        <%= link_to products_path(filter: 'updated'), 
            class: "btn btn-filter #{params[:filter] == 'updated' ? 'active' : ''}" do %>
          <i class="bi bi-clock-history me-2"></i>Recently Updated
        <% end %>
      </div>
    </div>

    <!-- Products Grid -->
    <% if @products && @products.any? %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4 mb-5">
        <% @products.each do |product| %>
          <div class="col">
            <%= link_to product_path(product), class: 'text-decoration-none yae-product-link' do %>
              <div class="yae-product-card h-100">
                
                <!-- Badges -->
                <% if product.created_at >= 3.days.ago %>
                  <span class="yae-badge yae-badge-new">
                    <i class="bi bi-star-fill me-1"></i>NEW
                  </span>
                <% end %>
                
                <% if product.on_sale %>
                  <span class="yae-badge yae-badge-sale">
                    <i class="bi bi-tag-fill me-1"></i>SALE
                  </span>
                <% end %>
                
                <!-- Product Image -->
                <div class="yae-product-image">
                  <% if product.cover_image.attached? %>
                    <%= image_tag product.medium_image, alt: product.title %>
                  <% else %>
                    <div class="yae-product-placeholder">
                      <i class="bi bi-book"></i>
                    </div>
                  <% end %>
                  <div class="yae-product-overlay">
                    <span class="yae-view-btn">
                      <i class="bi bi-eye-fill me-2"></i>View Details
                    </span>
                  </div>
                </div>

                <!-- Card Info -->
                <div class="yae-product-info">
                  <h6 class="yae-product-title">
                    <%= truncate(product.title, length: 50) %>
                  </h6>
                  
                  <% if product.authors.any? %>
                    <p class="yae-product-author">
                      <%= product.authors.first.author_name %>
                    </p>
                  <% end %>

                  <!-- Rating -->
                  <% if product.average_rating > 0 %>
                    <div class="yae-product-rating">
                      <div class="yae-stars">
                        <%= render 'shared/star_rating', rating: product.average_rating %>
                      </div>
                      <span class="yae-rating-count">
                        (<%= product.ratings_count %>)
                      </span>
                    </div>
                  <% end %>
                  
                  <!-- Price -->
                  <div class="yae-product-price">
                    <%= number_to_currency(product.current_price) %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-5 d-flex justify-content-center">
        <nav aria-label="Page navigation">
          <%= paginate @products, theme: 'bootstrap-5' %>
        </nav>
      </div>

    <% else %>
      <div class="yae-no-results">
        <div class="text-center py-5">
          <i class="bi bi-search display-1 text-muted mb-4"></i>
          <h4 class="mb-3">No products found</h4>
          <p class="text-muted mb-4">Try adjusting your search or browse all products.</p>
          <%= link_to "View All Products", products_path, class: "btn btn-yae-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  :root {
    --yae-pink: #E91E8C;
    --yae-purple: #8B2C7F;
    --yae-dark: #4A1942;
    --yae-light-pink: #F8C8DC;
  }

  .yae-products-page {
    background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);
    min-height: 100vh;
  }

  /* Hero Section */
  .yae-hero {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    border-bottom: 4px solid var(--yae-pink);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Category Buttons */
  .btn-category {
    background: white;
    color: var(--yae-purple);
    border: 2px solid var(--yae-purple);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .btn-category:hover {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    color: white;
    border-color: var(--yae-pink);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(139, 44, 127, 0.3);
  }

  /* Search Card */
  .yae-search-card {
    max-width: 900px;
    border: 3px solid var(--yae-purple);
    border-radius: 20px;
    background: white;
  }

  .yae-input {
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .yae-input:focus {
    border-color: var(--yae-purple);
    box-shadow: 0 0 0 0.2rem rgba(139, 44, 127, 0.25);
  }

  .btn-yae-search {
    background: linear-gradient(135deg, var(--yae-pink) 0%, #d91479 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn-yae-search:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(233, 30, 140, 0.4);
    background: linear-gradient(135deg, #d91479 0%, var(--yae-pink) 100%);
  }

  /* Filter Buttons */
  .btn-group-yae {
    display: inline-flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .btn-filter {
    background: white;
    color: var(--yae-purple);
    border: 2px solid var(--yae-purple);
    padding: 0.75rem 2rem;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }

  .btn-filter:hover {
    background: linear-gradient(135deg, var(--yae-light-pink) 0%, #e9d5ff 100%);
    color: var(--yae-purple);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(139, 44, 127, 0.2);
  }

  .btn-filter.active {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    color: white;
    border-color: var(--yae-pink);
  }

  /* Product Card */
  .yae-product-link {
    display: block;
    height: 100%;
  }

  .yae-product-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .yae-product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 30px rgba(139, 44, 127, 0.3);
  }

  /* Product Image */
  .yae-product-image {
    width: 100%;
    aspect-ratio: 2/3;
    position: relative;
    overflow: hidden;
    background: #f8f9fa;
  }

  .yae-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .yae-product-card:hover .yae-product-image img {
    transform: scale(1.05);
  }

  .yae-product-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 4rem;
  }

  /* Product Overlay */
  .yae-product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top, rgba(139, 44, 127, 0.9) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 1rem;
  }

  .yae-product-card:hover .yae-product-overlay {
    opacity: 1;
  }

  .yae-view-btn {
    background: white;
    color: var(--yae-purple);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .yae-product-card:hover .yae-view-btn {
    transform: translateY(0);
  }

  /* Badges */
  .yae-badge {
    position: absolute;
    top: 10px;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    z-index: 10;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    display: inline-flex;
    align-items: center;
  }

  .yae-badge-new {
    left: 10px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
  }

  .yae-badge-sale {
    right: 10px;
    background: linear-gradient(135deg, var(--yae-pink) 0%, #d91479 100%);
    color: white;
  }

  /* Product Info */
  .yae-product-info {
    padding: 1.25rem;
  }

  .yae-product-title {
    font-size: 0.95rem;
    line-height: 1.4;
    min-height: 2.8rem;
    font-weight: 600;
    color: var(--yae-dark);
    margin-bottom: 0.5rem;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .yae-product-author {
    font-size: 0.85rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
    font-style: italic;
  }

  .yae-product-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .yae-stars {
    font-size: 0.85rem;
  }

  .yae-stars i {
    color: #ffc107;
  }

  .yae-rating-count {
    font-size: 0.8rem;
    color: #9ca3af;
  }

  .yae-product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--yae-purple);
    background: linear-gradient(135deg, var(--yae-pink) 0%, var(--yae-purple) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* No Results */
  .yae-no-results {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .btn-yae-primary {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    color: white;
    border: none;
    padding: 1rem 3rem;
    border-radius: 30px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-yae-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(139, 44, 127, 0.4);
    color: white;
  }

  /* Pagination Styling */
  nav[aria-label="Page navigation"] {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding: 0.5rem 0;
  }

  .pagination {
    gap: 0.5rem;
    flex-wrap: nowrap;
    margin-bottom: 0;
  }

  .pagination .page-link {
    border: 2px solid var(--yae-purple);
    color: var(--yae-purple);
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
    padding: 0.5rem 0.75rem;
    min-width: 42px;
    text-align: center;
    white-space: nowrap;
  }

  .pagination .page-link:hover {
    background: var(--yae-purple);
    color: white;
  }

  .pagination .page-item.active .page-link {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    border-color: var(--yae-pink);
    color: white;
  }

  .pagination .page-item.disabled .page-link {
    opacity: 0.5;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .yae-hero h1 {
      font-size: 2rem;
    }

    .btn-category, .btn-filter {
      font-size: 0.8rem;
      padding: 0.6rem 1.2rem;
    }

    .btn-group-yae {
      gap: 0.5rem;
    }

    /* Mobile Pagination - Enable Horizontal Scroll */
    nav[aria-label="Page navigation"] {
      max-width: 100%;
      overflow-x: auto;
      overflow-y: hidden;
    }

    .pagination {
      flex-wrap: nowrap;
      justify-content: flex-start;
      gap: 0.3rem;
      padding: 0.5rem;
      min-width: min-content;
    }

    .pagination .page-link {
      padding: 0.4rem 0.6rem;
      min-width: 38px;
      font-size: 0.85rem;
    }

    .pagination .page-item {
      flex-shrink: 0;
    }
  }

  @media (max-width: 576px) {
    .pagination .page-link {
      padding: 0.35rem 0.5rem;
      min-width: 35px;
      font-size: 0.8rem;
      border-width: 1.5px;
    }
  }
</style>

