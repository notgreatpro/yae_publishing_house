<!-- app/views/customers/edit.html.erb -->

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Profile</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @customer, url: customer_profile_path, method: :patch, local: true do |f| %>
            
            <% if @customer.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">
                  <i class="bi bi-exclamation-triangle-fill me-2"></i>
                  <%= pluralize(@customer.errors.count, "error") %> prohibited this profile from being saved:
                </h5>
                <ul class="mb-0">
                  <% @customer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <!-- Personal Information -->
            <h5 class="mb-3">Personal Information</h5>

            <!-- Profile Picture Section -->
            <div class="mb-4">
              <label class="form-label fw-semibold">Profile Picture</label>
              
              <div class="d-flex align-items-center gap-3">
                <% if @customer.profile_picture.attached? %>
                  <%= image_tag @customer.profile_picture.variant(resize_to_fill: [100, 100]), 
                      class: 'rounded-circle', 
                      style: 'width: 80px; height: 80px; object-fit: cover;' %>
                <% else %>
                  <div class="avatar-circle-small bg-primary text-white">
                    <h3 class="mb-0"><%= @customer.initials %></h3>
                  </div>
                <% end %>
                
                <div class="flex-grow-1">
                  <%= f.file_field :profile_picture, 
                      accept: 'image/png,image/jpeg,image/jpg,image/gif',
                      class: 'form-control',
                      onchange: 'previewProfilePicture(event)' %>
                  <small class="text-muted">JPG, PNG, or GIF. Max size 5MB.</small>
                  
                  <% if @customer.profile_picture.attached? %>
                    <div class="mt-2">
                      <%= button_to 'Remove Current Picture', 
                          remove_profile_picture_path, 
                          method: :delete, 
                          class: 'btn btn-sm btn-outline-danger',
                          data: { confirm: 'Are you sure you want to remove your profile picture?' } %>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Preview Container -->
              <div id="profile-picture-preview" class="mt-3" style="display: none;">
                <p class="text-muted mb-2">New picture preview:</p>
                <img id="preview-image" class="rounded-circle" 
                     style="width: 100px; height: 100px; object-fit: cover;" />
              </div>
            </div>

            <hr>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :first_name, class: 'form-label fw-semibold' %>
                <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name, class: 'form-label fw-semibold' %>
                <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :email, class: 'form-label fw-semibold' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'your.email@example.com' %>
              <small class="text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="mb-3">
              <%= f.label :phone, 'Phone Number (Optional)', class: 'form-label fw-semibold' %>
              <%= f.telephone_field :phone, class: 'form-control', placeholder: '(123) 456-7890' %>
                <small class="text-muted">Optional - for order updates</small>
            </div>

            <hr>

            <!-- Shipping Address -->
            <h5 class="mb-3">Shipping Address <span class="text-muted fs-6">(Optional)</span></h5>
            
            <div class="mb-3">
              <%= f.label :address_line1, 'Address Line 1', class: 'form-label fw-semibold' %>
              <%= f.text_field :address_line1, class: 'form-control', placeholder: '123 Main Street' %>
            </div>

            <div class="mb-3">
              <%= f.label :address_line2, 'Address Line 2 (Optional)', class: 'form-label fw-semibold' %>
              <%= f.text_field :address_line2, class: 'form-control', placeholder: 'Apt 4B, Unit 2, etc.' %>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :city, class: 'form-label fw-semibold' %>
                <%= f.text_field :city, class: 'form-control', placeholder: 'City' %>
              </div>
              <div class="col-md-6">
                <%= f.label :province_id, 'Province', class: 'form-label fw-semibold' %>
                <%= f.collection_select :province_id, Province.all, :id, :name, 
                    { prompt: 'Select Province' }, { class: 'form-select' } %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :postal_code, class: 'form-label fw-semibold' %>
              <%= f.text_field :postal_code, class: 'form-control', placeholder: 'A1A 1A1', 
                  maxlength: 7, style: 'width: 200px;' %>
              <small class="text-muted">Format: A1A 1A1</small>
            </div>

            <hr>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 justify-content-between">
              <%= link_to 'Cancel', customer_profile_path, class: 'btn btn-secondary' %>
              <div>
                <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
              </div>
            </div>

          <% end %>

          <!-- Change Password Section -->
          <hr class="my-4">
          <div class="card bg-light">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-shield-lock me-2"></i> Change Password
              </h5>
              <p class="card-text text-muted mb-3">
                Want to change your password? You'll need to use the password reset feature.
              </p>
              <%= link_to 'Reset Password', new_customer_password_path, class: 'btn btn-outline-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-format postal code
  document.addEventListener('DOMContentLoaded', function() {
    const postalInput = document.querySelector('input[name="customer[postal_code]"]');
    
    if (postalInput) {
      postalInput.addEventListener('input', function(e) {
        let value = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
        
        if (value.length > 3) {
          value = value.slice(0, 3) + ' ' + value.slice(3, 6);
        }
        
        e.target.value = value;
      });
    }
  });

  // Preview profile picture before upload
  function previewProfilePicture(event) {
    const file = event.target.files[0];
    const preview = document.getElementById('profile-picture-preview');
    const previewImage = document.getElementById('preview-image');
    
    if (file) {
      const reader = new FileReader();
      
      reader.onload = function(e) {
        previewImage.src = e.target.result;
        preview.style.display = 'block';
      };
      
      reader.readAsDataURL(file);
    } else {
      preview.style.display = 'none';
    }
  }
</script>

<style>
  .avatar-circle-small {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
</style>