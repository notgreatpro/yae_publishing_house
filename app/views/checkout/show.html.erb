<!-- app/views/checkout/show.html.erb -->
<!-- Feature 3.1.3 - Complete a checkout process (8%) -->
<!-- Feature 3.3.1 - Stripe Payment Integration (6%) -->

<div class="checkout-container">
  <div class="breadcrumb">
    <%= link_to 'Home', root_path %> &gt; 
    <%= link_to 'Cart', cart_path %> &gt; 
    Checkout
  </div>

  <header class="checkout-header">
    <h1>Checkout</h1>
  </header>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if @order && @order.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@order.errors.count, "error") %> prevented this order from being saved:</h4>
      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="checkout-content">
    <!-- Order Summary Sidebar -->
    <div class="order-summary-sidebar">
      <h2>Order Summary</h2>
      
      <div class="summary-items">
        <% @cart_items.each do |item| %>
          <div class="summary-item">
            <div class="summary-item-image">
              <% if item[:product].cover_image.attached? %>
                <%= image_tag item[:product].cover_image, alt: item[:product].title %>
              <% else %>
                <div class="placeholder-mini">ðŸ“š</div>
              <% end %>
            </div>
            <div class="summary-item-details">
              <p class="summary-item-title"><%= item[:product].title %></p>
              <p class="summary-item-qty">Qty: <%= item[:quantity] %></p>
              <p class="summary-item-unit-price"><%= number_to_currency(item[:product].current_price) %> each</p>
            </div>
            <div class="summary-item-price">
              <%= number_to_currency(item[:product].current_price * item[:quantity]) %>
            </div>
          </div>
        <% end %>
      </div>

      <hr>

      <div class="summary-totals">
        <div class="summary-row">
          <span>Subtotal (<%= pluralize(@cart_items.sum { |i| i[:quantity] }, 'item') %>):</span>
          <span><strong><%= number_to_currency(@subtotal) %></strong></span>
        </div>
        
        <div class="summary-row tax-row">
          <span>Tax:</span>
          <span id="tax-display">Select province to calculate</span>
        </div>

        <hr>

        <div class="summary-row total-row">
          <span>Total:</span>
          <span id="total-display"><%= number_to_currency(@subtotal) %>+</span>
        </div>
        <p class="tax-note">Final amount with tax will be calculated after selecting province</p>
      </div>
    </div>

    <!-- Checkout Form -->
    <div class="checkout-form-section">
      <%= form_with url: checkout_path, method: :post, local: false, id: 'checkout-form', class: 'checkout-form' do |f| %>
        
        <!-- Customer Information -->
        <div class="form-section">
          <h2>Contact Information</h2>
          
          <div class="customer-info-display">
            <p><strong>Logged in as:</strong> <%= @customer.email %></p>
          </div>
        </div>

        <!-- Saved Address Option -->
        <% if @customer.has_complete_address? %>
          <div class="form-section">
            <h2>Shipping Address</h2>
            
            <div class="saved-address-option">
              <label class="address-radio-option">
                <%= radio_button_tag :use_saved_address, '1', true, class: 'address-radio' %>
                <div class="address-option-content">
                  <strong>Use saved address</strong>
                  <div class="saved-address-display">
                    <p><%= @customer.first_name %> <%= @customer.last_name %></p>
                    <p><%= @customer.address_line1 %></p>
                    <% if @customer.address_line2.present? %>
                      <p><%= @customer.address_line2 %></p>
                    <% end %>
                    <p><%= @customer.city %>, <%= @customer.province.code %> <%= @customer.postal_code %></p>
                    <% if @customer.phone.present? %>
                      <p><%= @customer.phone %></p>
                    <% end %>
                  </div>
                </div>
              </label>

              <label class="address-radio-option">
                <%= radio_button_tag :use_saved_address, '0', false, class: 'address-radio' %>
                <div class="address-option-content">
                  <strong>Use a different address</strong>
                </div>
              </label>
            </div>

            <div id="new-address-fields" style="display: none; margin-top: 20px;">
        <% else %>
          <div class="form-section">
            <h2>Shipping Address</h2>
            <div id="new-address-fields">
        <% end %>

              <div class="form-row">
                <div class="form-group">
                  <%= label_tag :first_name, "First Name" %>
                  <%= text_field_tag :first_name, @customer.first_name, 
                      required: !@customer.has_complete_address?, 
                      class: 'form-control' %>
                </div>
                
                <div class="form-group">
                  <%= label_tag :last_name, "Last Name" %>
                  <%= text_field_tag :last_name, @customer.last_name, 
                      required: !@customer.has_complete_address?, 
                      class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :address_line1, "Address Line 1" %>
                <%= text_field_tag :address_line1, '', 
                    required: !@customer.has_complete_address?, 
                    class: 'form-control',
                    placeholder: 'Street address, P.O. box' %>
              </div>

              <div class="form-group">
                <%= label_tag :address_line2, "Address Line 2 (Optional)" %>
                <%= text_field_tag :address_line2, '', 
                    class: 'form-control',
                    placeholder: 'Apartment, suite, unit, building, floor, etc.' %>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <%= label_tag :city, "City" %>
                  <%= text_field_tag :city, '', 
                      required: !@customer.has_complete_address?, 
                      class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= label_tag :province_id, "Province" %>
                  <%= select_tag :province_id, 
                      options_from_collection_for_select(Province.order(:name), :id, :name, @customer.province_id),
                      prompt: 'Select Province',
                      required: !@customer.has_complete_address?,
                      class: 'form-control',
                      id: 'province-select',
                      data: { 
                        provinces: Province.all.to_json(only: [:id, :name, :gst_rate, :pst_rate, :hst_rate]),
                        subtotal: @subtotal
                      } %>
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <%= label_tag :postal_code, "Postal Code" %>
                  <%= text_field_tag :postal_code, '', 
                      required: !@customer.has_complete_address?, 
                      class: 'form-control',
                      placeholder: 'A1A 1A1',
                      pattern: '[A-Za-z]\d[A-Za-z] ?\d[A-Za-z]\d' %>
                </div>

                <div class="form-group">
                  <%= label_tag :phone, "Phone Number (Optional)" %>
                  <%= telephone_field_tag :phone, '', 
                      class: 'form-control',
                      placeholder: '(123) 456-7890' %>
                </div>
              </div>
            </div>
          </div>

        <!-- Payment Information -->
        <div class="form-section">
          <h2>ðŸ’³ Payment Information</h2>
          
          <div class="secure-badge">
            <span>ðŸ”’</span>
            <div>
              <strong>Secure Payment</strong>
              <p>Your payment information is encrypted and secure</p>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :cardholder_name, "Cardholder Name" %>
            <%= text_field_tag :cardholder_name, '', 
                required: true,
                class: 'form-control',
                placeholder: 'Name on card',
                autocomplete: 'cc-name' %>
          </div>

          <div class="form-group">
            <label for="card-element">Card Number</label>
            <div id="card-number-element" class="stripe-card-element">
              <!-- Stripe Card Number Element -->
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="card-expiry-element">Expiry Date</label>
              <div id="card-expiry-element" class="stripe-card-element">
                <!-- Stripe Expiry Element -->
              </div>
            </div>

            <div class="form-group">
              <label for="card-cvc-element">CVC</label>
              <div id="card-cvc-element" class="stripe-card-element">
                <!-- Stripe CVC Element -->
              </div>
            </div>
          </div>

          <div id="card-errors" role="alert" class="card-errors"></div>

          <div class="payment-test-mode">
            <p><strong>ðŸ§ª Test Mode</strong></p>
            <p>Use test card: <code>4242 4242 4242 4242</code></p>
            <p>Any future expiry date and any 3-digit CVC</p>
          </div>
        </div>

        <!-- Order Notes (Optional) -->
        <div class="form-section">
          <h2>Order Notes (Optional)</h2>
          <div class="form-group">
            <%= label_tag :order_notes, "Special instructions or delivery notes" %>
            <%= text_area_tag :order_notes, '', 
                class: 'form-control',
                rows: 3,
                placeholder: 'Any special delivery instructions...' %>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
          <%= f.submit 'Place Order', class: 'btn-place-order', id: 'submit-button', 
              data: { disable_with: 'Processing Payment...' } %>
          <%= link_to 'Return to Cart', cart_path, class: 'btn-back' %>
        </div>

        <!-- Hidden field for Stripe payment method -->
        <%= hidden_field_tag :stripe_payment_method_id, '', id: 'stripe-payment-method-id' %>
      <% end %>
    </div>
  </div>
</div>

<!-- Load Stripe.js -->
<script src="https://js.stripe.com/v3/"></script>

