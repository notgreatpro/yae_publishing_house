<!-- app/views/shared/_active_promotions.html.erb -->
<% active_coupons = Coupon.available.where(discount_category: ['bulk_discount', 'flash_sale', 'first_time_buyer']).limit(3) %>

<% if active_coupons.any? %>
  <div class="yae-promotions-banner">
    <div class="container-fluid px-lg-5">
      <h3 class="yae-promotions-title">
        <i class="bi bi-megaphone-fill me-2"></i>Active Promotions
      </h3>
      
      <div class="row g-3">
        <% active_coupons.each do |coupon| %>
          <div class="col-md-4">
            <div class="yae-promo-card <%= coupon.discount_category %>">
              <div class="yae-promo-header">
                <% if coupon.flash_sale? %>
                  <div class="yae-promo-icon flash-sale">
                    <i class="bi bi-lightning-charge-fill"></i>
                  </div>
                <% elsif coupon.bulk_discount? %>
                  <div class="yae-promo-icon bulk">
                    <i class="bi bi-cart-check-fill"></i>
                  </div>
                  <div class="yae-promo-badge bulk">BULK DISCOUNT</div>
                <% elsif coupon.first_time_buyer? %>
                  <div class="yae-promo-icon first-time">
                    <i class="bi bi-gift-fill"></i>
                  </div>
                  <div class="yae-promo-badge first-time">NEW CUSTOMER</div>
                <% end %>
              </div>
              
              <div class="yae-promo-content">
                <!-- Display coupon name -->
                <h3 class="yae-promo-name"><%= coupon.display_name %></h3>
                
                <!-- Display discount amount -->
                <h4 class="yae-promo-discount"><%= coupon.display_discount %></h4>
                
                <!-- Display coupon code -->
                <p class="yae-promo-code">
                  Use code: <strong><%= coupon.code %></strong>
                </p>
                
                <!-- Display tags if present -->
                <% if coupon.tags.present? %>
                  <div class="yae-promo-tags">
                    <% coupon.tags.each do |tag| %>
                      <span class="yae-tag"><i class="bi bi-tag-fill me-1"></i><%= tag %></span>
                    <% end %>
                  </div>
                <% end %>
                
                <!-- Minimum purchase requirement -->
                <% if coupon.minimum_purchase.present? %>
                  <p class="yae-promo-condition">
                    <i class="bi bi-info-circle me-1"></i>
                    Min. purchase: <%= number_to_currency(coupon.minimum_purchase) %>
                  </p>
                <% end %>
                
                <!-- Bulk discount quantity requirement -->
                <% if coupon.bulk_discount? && coupon.applies_to_quantity.present? %>
                  <p class="yae-promo-condition">
                    <i class="bi bi-cart3 me-1"></i>
                    Buy <%= coupon.applies_to_quantity %>+ items
                  </p>
                <% end %>
                
                <!-- Flash sale countdown -->
                <% if coupon.flash_sale? && coupon.time_remaining %>
                  <div class="yae-countdown">
                    <i class="bi bi-clock-fill me-1"></i>
                    <span class="countdown-timer" data-end-time="<%= coupon.flash_sale_ends_at.iso8601 %>">
                      <%= coupon.time_remaining %>
                    </span>
                    left!
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<style>
  .yae-promotions-banner {
    background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);
    padding: 3rem 0;
    margin-bottom: 3rem;
  }

  .yae-promotions-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--yae-purple);
    margin-bottom: 2rem;
    text-align: center;
  }

  .yae-promo-card {
    background: white;
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 3px solid;
    height: 100%;
  }

  .yae-promo-card.flash_sale {
    border-color: #f59e0b;
    background: linear-gradient(135deg, #fef3c7 0%, white 50%);
  }

  .yae-promo-card.bulk_discount {
    border-color: #3b82f6;
    background: linear-gradient(135deg, #dbeafe 0%, white 50%);
  }

  .yae-promo-card.first_time_buyer {
    border-color: #10b981;
    background: linear-gradient(135deg, #d1fae5 0%, white 50%);
  }

  .yae-promo-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .yae-promo-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .yae-promo-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
  }

  .yae-promo-icon.flash-sale {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }

  .yae-promo-icon.bulk {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  }

  .yae-promo-icon.first-time {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }

  .yae-promo-badge {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 700;
    font-size: 0.75rem;
    letter-spacing: 0.5px;
    color: white;
  }

  .yae-promo-badge.flash-sale {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }

  .yae-promo-badge.bulk {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  }

  .yae-promo-badge.first-time {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }

  .yae-promo-content {
    text-align: center;
  }

  .yae-promo-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--yae-purple);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .yae-promo-discount {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--yae-dark);
    margin-bottom: 0.5rem;
  }

  .yae-promo-code {
    font-size: 1rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
  }

  .yae-promo-code strong {
    color: var(--yae-purple);
    background: #f3f4f6;
    padding: 0.25rem 0.75rem;
    border-radius: 8px;
    font-size: 1.1rem;
  }

  .yae-promo-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .yae-tag {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    letter-spacing: 0.3px;
    box-shadow: 0 2px 8px rgba(139, 44, 127, 0.3);
  }

  .yae-promo-condition {
    font-size: 0.85rem;
    color: #6b7280;
    margin-bottom: 0.5rem;
  }

  .yae-countdown {
    background: #fee2e2;
    color: #991b1b;
    padding: 0.75rem 1rem;
    border-radius: 10px;
    font-weight: 700;
    font-size: 1rem;
    margin-top: 1rem;
    display: inline-flex;
    align-items: center;
  }

  .countdown-timer {
    font-size: 1.2rem;
    margin: 0 0.25rem;
  }

  @media (max-width: 767px) {
    .yae-promotions-title {
      font-size: 1.5rem;
    }

    .yae-promo-name {
      font-size: 1.2rem;
    }

    .yae-promo-discount {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  // Countdown timer
  document.addEventListener('DOMContentLoaded', function() {
    const timers = document.querySelectorAll('.countdown-timer');
    
    timers.forEach(timer => {
      const endTime = new Date(timer.dataset.endTime);
      
      function updateCountdown() {
        const now = new Date();
        const diff = endTime - now;
        
        if (diff <= 0) {
          timer.textContent = 'ENDED';
          return;
        }
        
        const hours = Math.floor(diff / 3600000);
        const minutes = Math.floor((diff % 3600000) / 60000);
        const seconds = Math.floor((diff % 60000) / 1000);
        
        if (hours > 0) {
          timer.textContent = `${hours}h ${minutes}m`;
        } else if (minutes > 0) {
          timer.textContent = `${minutes}m ${seconds}s`;
        } else {
          timer.textContent = `${seconds}s`;
        }
      }
      
      updateCountdown();
      setInterval(updateCountdown, 1000);
    });
  });
</script>