<nav class="yae-navbar navbar navbar-expand-lg navbar-dark sticky-top">
  <div class="container-fluid px-lg-5">
    <!-- Brand Logo -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'Yae_Publishing_House_logo.png', alt: 'Yae Publishing House' %>
    <% end %>
    
    <!-- Mobile Hamburger -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <!-- Navigation Links -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-lg-center">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link #{'active' if current_page?(root_path)}" do %>
            <i class="bi bi-house-door me-1"></i>Home
          <% end %>
        </li>
        
        <!-- Categories Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" 
             data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-bookshelf me-1"></i>Categories
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><%= link_to "All Books", root_path, class: "dropdown-item fw-semibold" %></li>
            <li><hr class="dropdown-divider"></li>
            <% Category.order(:category_name).each do |category| %>
              <li>
                <%= link_to category_path(category), class: "dropdown-item d-flex justify-content-between align-items-center" do %>
                  <span><%= category.category_name %></span>
                  <span class="badge"><%= category.products.count %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>

        <li class="nav-item">
          <%= link_to events_path, class: "nav-link #{'active' if current_page?(events_path)}" do %>
            <i class="bi bi-calendar-event me-1"></i>Events
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to careers_path, class: "nav-link #{'active' if current_page?(careers_path)}" do %>
            <i class="bi bi-briefcase me-1"></i>Careers
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to about_path, class: "nav-link #{'active' if current_page?(about_path)}" do %>
            <i class="bi bi-info-circle me-1"></i>About
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to contact_path, class: "nav-link #{'active' if current_page?(contact_path)}" do %>
            <i class="bi bi-envelope me-1"></i>Contact
          <% end %>
        </li>
        
        <% if customer_signed_in? %>
          <li class="nav-item">
            <%= link_to wishlists_path, class: "nav-link #{'active' if current_page?(wishlists_path)}" do %>
              <i class="bi bi-heart me-1"></i>Wishlist
              <% if wishlist_count > 0 %>
                <span class="badge-count"><%= wishlist_count %></span>
              <% end %>
            <% end %>
          </li>
          
          <!-- Customer Profile Dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle profile-greeting" href="#" role="button" 
               data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle me-1"></i><%= current_customer.first_name %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <%= link_to customer_profile_path, class: 'dropdown-item' do %>
                  <i class="bi bi-person-circle me-2"></i>My Profile
                <% end %>
              </li>
              <li>
                <%= link_to orders_path, class: 'dropdown-item' do %>
                  <i class="bi bi-bag-check me-2"></i>My Orders
                <% end %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to destroy_customer_session_path, 
                  method: :delete, 
                  data: { turbo: false },
                  class: 'dropdown-item text-danger',
                  form: { style: 'display: inline; width: 100%;' } do %>
                  <i class="bi bi-box-arrow-right me-2"></i>Log Out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_customer_session_path, class: 'nav-link btn-auth me-2' do %>
              <i class="bi bi-box-arrow-in-right me-1"></i>Log In
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_customer_registration_path, class: 'nav-link btn-auth me-2' do %>
              <i class="bi bi-person-plus me-1"></i>Sign Up
            <% end %>
          </li>
        <% end %>
        
        <li class="nav-item ms-lg-3">
          <%= link_to cart_path, class: "btn btn-cart" do %>
            <i class="bi bi-cart3 me-2"></i>Cart <span class="badge-count-cart">(<%= cart_count %>)</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Ensure Bootstrap Icons are loaded -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
  :root {
    --yae-pink: #E91E8C;
    --yae-purple: #8B2C7F;
    --yae-dark: #4A1942;
    --yae-light-pink: #F8C8DC;
  }

  .yae-navbar {
    background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
    padding: 0.75rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    border-bottom: 3px solid var(--yae-pink);
  }

  .yae-navbar .navbar-brand img {
    height: 70px;
    filter: brightness(0) invert(1);
    transition: transform 0.3s ease, filter 0.3s ease;
  }

  .yae-navbar .navbar-brand:hover img {
    transform: scale(1.05);
    filter: brightness(0) invert(1) drop-shadow(0 0 10px rgba(233, 30, 140, 0.5));
  }

  .yae-navbar .nav-link {
    color: rgba(255, 255, 255, 0.9) !important;
    font-weight: 600;
    padding: 0.5rem 1rem !important;
    transition: all 0.3s ease;
    position: relative;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    display: inline-flex;
    align-items: center;
  }

  .yae-navbar .nav-link i {
    color: var(--yae-pink);
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .yae-navbar .nav-link:hover {
    color: white !important;
    transform: translateY(-2px);
  }

  .yae-navbar .nav-link:hover i {
    transform: scale(1.2);
    color: var(--yae-light-pink);
  }

  .yae-navbar .nav-link.active {
    color: white !important;
    background: rgba(233, 30, 140, 0.2);
    border-radius: 8px;
  }

  .yae-navbar .nav-link.active i {
    color: var(--yae-light-pink);
    animation: pulse 2s infinite;
  }

  .yae-navbar .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--yae-pink);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .yae-navbar .nav-link:hover::after,
  .yae-navbar .nav-link.active::after {
    width: 80%;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.1);
    }
  }

  .yae-navbar .dropdown-toggle {
    color: rgba(255, 255, 255, 0.9) !important;
  }

  .yae-navbar .dropdown-toggle i {
    color: var(--yae-pink);
  }

  .yae-navbar .dropdown-menu {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border: 2px solid var(--yae-pink);
    border-radius: 10px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    margin-top: 0.5rem;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .yae-navbar .dropdown-item {
    color: var(--yae-dark);
    padding: 0.75rem 1.5rem;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .yae-navbar .dropdown-item:hover {
    background: linear-gradient(90deg, var(--yae-light-pink) 0%, transparent 100%);
    color: var(--yae-purple);
    padding-left: 2rem;
  }

  .yae-navbar .dropdown-item .badge {
    background: var(--yae-purple);
    color: white;
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
  }

  .yae-navbar .dropdown-divider {
    border-color: var(--yae-pink);
    opacity: 0.3;
  }

  /* Badge count styling */
  .badge-count {
    background: var(--yae-pink);
    color: white;
    font-size: 0.65rem;
    padding: 0.15rem 0.4rem;
    border-radius: 10px;
    margin-left: 0.25rem;
    font-weight: 700;
    vertical-align: super;
  }

  .badge-count-cart {
    font-weight: 700;
  }

  .yae-navbar .btn-cart {
    background: linear-gradient(135deg, var(--yae-pink) 0%, #d91479 100%);
    color: white;
    font-weight: 700;
    padding: 0.6rem 1.5rem;
    border-radius: 25px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(233, 30, 140, 0.3);
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .yae-navbar .btn-cart:hover {
    background: linear-gradient(135deg, #d91479 0%, var(--yae-pink) 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(233, 30, 140, 0.4);
    border-color: white;
  }

  .yae-navbar .btn-cart i {
    color: white;
    font-size: 1.2rem;
  }

  .yae-navbar .btn-auth {
    background: transparent;
    color: white !important;
    font-weight: 600;
    padding: 0.5rem 1.2rem;
    border-radius: 20px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
  }

  .yae-navbar .btn-auth i {
    color: var(--yae-pink);
  }

  .yae-navbar .btn-auth:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: white;
    color: white !important;
    transform: translateY(-2px);
  }

  .yae-navbar .btn-auth:hover i {
    color: var(--yae-light-pink);
  }

  .yae-navbar .navbar-toggler {
    border: 2px solid rgba(255, 255, 255, 0.5);
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
  }

  .yae-navbar .navbar-toggler:focus {
    box-shadow: 0 0 0 0.2rem rgba(233, 30, 140, 0.5);
  }

  .yae-navbar .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 0.9)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }

  .yae-navbar .dropdown-item.text-danger {
    color: #dc3545 !important;
  }

  .yae-navbar .dropdown-item.text-danger:hover {
    background: linear-gradient(90deg, rgba(220, 53, 69, 0.1) 0%, transparent 100%);
  }

  /* Profile greeting enhancement */
  .profile-greeting {
    background: rgba(233, 30, 140, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .profile-greeting:hover {
    background: rgba(233, 30, 140, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
  }

  /* Responsive adjustments */
  @media (max-width: 991px) {
    .yae-navbar {
      padding: 1rem 0;
    }

    .yae-navbar .navbar-collapse {
      background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%);
      padding: 1rem;
      border-radius: 10px;
      margin-top: 1rem;
    }

    .yae-navbar .nav-link::after {
      display: none;
    }

    .yae-navbar .btn-cart {
      width: 100%;
      margin-top: 1rem;
    }

    .yae-navbar .btn-auth {
      width: 100%;
      margin-bottom: 0.5rem;
    }
  }
</style>