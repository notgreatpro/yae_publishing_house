<!-- app/views/layouts/_footer.html.erb -->
<footer class="mt-5" style="background: linear-gradient(135deg, var(--yae-purple) 0%, var(--yae-dark) 100%); color: white;">
  <div class="container py-5">
    <div class="row">
      <!-- About Section -->
      <div class="col-lg-4 col-md-6 mb-4">
        <%= image_tag 'Yae_Publishing_House_logo.png', alt: 'Yae Publishing House', 
            style: 'height: 80px; filter: brightness(0) invert(1);', class: 'mb-3' %>
        <p class="text-white-50">
          Inazuma's largest book publishing house since 1984!
        </p>
        <div class="d-flex gap-3 mt-3">
          <a href="#" class="text-white fs-4"><i class="bi bi-facebook"></i></a>
          <a href="#" class="text-white fs-4"><i class="bi bi-twitter"></i></a>
          <a href="#" class="text-white fs-4"><i class="bi bi-instagram"></i></a>
          <a href="#" class="text-white fs-4"><i class="bi bi-linkedin"></i></a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="col-lg-2 col-md-6 mb-4">
        <h5 class="text-white mb-3">Quick Links</h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <%= link_to "Home", root_path, class: "text-white-50 text-decoration-none" %>
          </li>
          <li class="mb-2">
            <%= link_to "About Us", about_path, class: "text-white-50 text-decoration-none" %>
          </li>
          <li class="mb-2">
            <%= link_to "Contact", contact_path, class: "text-white-50 text-decoration-none" %>
          </li>
          <% if customer_signed_in? %>
            <li class="mb-2">
              <%= link_to "My Orders", orders_path, class: "text-white-50 text-decoration-none" %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Categories -->
      <div class="col-lg-3 col-md-6 mb-4">
        <h5 class="text-white mb-3">Categories</h5>
        <ul class="list-unstyled">
          <% Category.order(:category_name).limit(6).each do |category| %>
            <li class="mb-2">
              <%= link_to category.category_name, category_path(category), 
                  class: "text-white-50 text-decoration-none" %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="col-lg-3 col-md-6 mb-4">
        <h5 class="text-white mb-3">Contact Us</h5>
        <ul class="list-unstyled text-white-50">
          <li class="mb-2">
            <i class="bi bi-geo-alt-fill me-2"></i>
            657 Watatsumi Ave E<br>
            <span class="ms-4">Inazuma City, Inazuma 74857</span>
          </li>
          <li class="mb-2">
            <i class="bi bi-envelope-fill me-2"></i>
            info@yaepublishinghouse.co.in
          </li>
          <li class="mb-2">
            <i class="bi bi-telephone-fill me-2"></i>
            (756)-748-3985
          </li>
        </ul>
      </div>
    </div>

    <hr class="my-4 bg-white opacity-25">

    <!-- Bottom Bar -->
    <div class="row">
      <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
        <p class="mb-0 text-white-50">
          &copy; <%= Time.current.year %> Yae Publishing House. All rights reserved.
        </p>
      </div>
         <div class="col-md-6 text-center text-md-end">
          <ul class="list-inline mb-0">
              <li class="list-inline-item">
                <%= link_to "Privacy Policy", privacy_path, class: "text-white-50 text-decoration-none" %>
                </li>
                <li class="list-inline-item">|</li>
                <li class="list-inline-item">
                <%= link_to "Terms of Service", terms_path, class: "text-white-50 text-decoration-none" %>
              </li>
            </ul>
          </div>
        </ul>
      </div>
    </div>
  </div>
</footer>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
  footer a:hover {
    color: white !important;
    text-decoration: underline !important;
  }
  
  footer .bi {
    opacity: 0.8;
  }
</style>