<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Yae Publishing House" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="turbo-root" content="false">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <%= favicon_link_tag 'Yae_Publishing_House_Favicon_logo.png' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <style>
      :root {
        --yae-pink: #f092f7;
        --yae-purple: #e242eb;
        --yae-dark: #824094;
      }
    </style>
  </head>

  <body>
    <!-- Bootstrap Navbar with Yae branding -->
    <nav class="navbar navbar-expand-lg sticky-top shadow-sm" style="background: var(--yae-pink); border-bottom: 3px solid var(--yae-purple);">
      <div class="container-fluid">
        <!-- Brand Logo -->
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag 'Yae_Publishing_House_logo.png', alt: 'Yae Publishing House', style: 'height: 60px;' %>
        <% end %>
        
        <!-- Mobile Hamburger -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto align-items-center">
            <li class="nav-item">
              <%= link_to "Home", products_path, class: 'nav-link fw-semibold', style: 'color: var(--yae-purple);' %>
            </li>
            
            <% if customer_signed_in? %>
              <li class="nav-item">
                <span class="nav-link" style="color: var(--yae-purple);">Hello, <%= current_customer.full_name %></span>
              </li>
              <li class="nav-item">
                <%= button_to "Log Out", destroy_customer_session_path, 
                  method: :delete, 
                  class: 'nav-link fw-semibold btn btn-link text-decoration-none',
                  style: 'color: var(--yae-purple); border: none; background: none; padding: 0.5rem 1rem;' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Log In", new_customer_session_path, class: 'nav-link fw-semibold', style: 'color: var(--yae-purple);' %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", new_customer_registration_path, class: 'nav-link fw-semibold', style: 'color: var(--yae-purple);' %>
              </li>
            <% end %>
            
            <li class="nav-item ms-2">
              <%= link_to cart_path, class: "btn btn-success fw-bold" do %>
                Your Cart (<%= cart_count %>)
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Messages with Bootstrap Alerts -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <!-- Main Content -->
    <%= yield %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>