<!-- app/views/cart/show.html.erb -->
<!-- Features 3.1.1 & 3.1.2 - Shopping Cart -->
<div class="container my-5">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
    </ol>
  </nav>

  <h1 class="mb-4">Your Shopping Cart</h1>

  <% if @cart_items.any? %>
    <div class="row">
      <!-- Cart Items -->
      <div class="col-lg-8">
        <% @cart_items.each do |item| %>
          <div class="card mb-3 shadow-sm">
            <div class="card-body">
              <div class="row align-items-center">
                <!-- Product Image -->
                <div class="col-md-2">
                  <% if item[:product].cover_image.attached? %>
                    <%= image_tag item[:product].cover_image, class: "img-fluid rounded", style: "max-height: 140px; object-fit: cover;" %>
                  <% else %>
                    <div class="bg-gradient rounded text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                      <span style="font-size: 3rem;">ðŸ“š</span>
                    </div>
                  <% end %>
                </div>

                <!-- Product Info -->
                <div class="col-md-4">
                  <h5 class="mb-1">
                    <%= link_to item[:product].title, product_path(item[:product]), class: "text-decoration-none text-dark" %>
                  </h5>
                  <% if item[:product].authors.any? %>
                    <p class="text-muted fst-italic small mb-1">
                      by <%= item[:product].authors.map(&:author_name).join(', ') %>
                    </p>
                  <% end %>
                  <p class="text-success fw-bold mb-0">
                    <%= number_to_currency(item[:product].current_price) %> each
                  </p>
                </div>

                <!-- Quantity Controls -->
                <div class="col-md-3">
                  <%= form_with url: cart_update_path(item[:product].id), method: :patch, class: "d-flex align-items-center gap-2" do |f| %>
                    <%= f.number_field :quantity, 
                        value: item[:quantity], 
                        min: 1, 
                        max: item[:product].stock_quantity || 99,
                        class: "form-control form-control-sm text-center",
                        style: "width: 70px;" %>
                    <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
                  <% end %>
                </div>

                <!-- Price & Remove -->
                <div class="col-md-3 text-end">
                  <p class="fs-4 fw-bold text-dark mb-2">
                    <%= number_to_currency(item[:item_total]) %>
                  </p>
                  <%= button_to "Remove", cart_remove_path(item[:product].id), 
                      method: :delete, 
                      class: "btn btn-sm btn-danger",
                      data: { confirm: "Remove this item from cart?" } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Clear Cart Button -->
        <div class="text-end mb-4">
          <%= button_to "Clear Cart", cart_clear_path, 
              method: :delete, 
              class: "btn btn-outline-danger",
              data: { confirm: "Are you sure you want to clear your cart?" } %>
        </div>
      </div>

      <!-- Order Summary Sidebar -->
      <div class="col-lg-4">
        <div class="card shadow-lg sticky-top" style="top: 20px;">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Order Summary</h5>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
              <span>Subtotal (<%= pluralize(@cart_items.sum { |i| i[:quantity] }, 'item') %>):</span>
              <span class="fw-bold"><%= number_to_currency(@total) %></span>
            </div>
            <div class="d-flex justify-content-between mb-2 text-muted small">
              <span>Shipping:</span>
              <span>Calculated at checkout</span>
            </div>
            <div class="d-flex justify-content-between mb-3 text-muted small">
              <span>Taxes:</span>
              <span>Calculated at checkout</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between mb-4">
              <span class="h5">Estimated Total:</span>
              <span class="h5 text-primary fw-bold"><%= number_to_currency(@total) %></span>
            </div>

            <% if customer_signed_in? %>
              <%= link_to "Proceed to Checkout", checkout_path, class: "btn btn-success btn-lg w-100 mb-3" %>
            <% else %>
              <div class="alert alert-info p-3" role="alert">
                <p class="mb-2 fw-bold">Please log in to checkout</p>
                <%= link_to "Log In", new_customer_session_path, class: "btn btn-primary w-100 mb-2" %>
                <%= link_to "Create Account", new_customer_registration_path, class: "btn btn-outline-primary w-100" %>
              </div>
            <% end %>

            <%= link_to "Continue Shopping", products_path, class: "btn btn-outline-secondary w-100" %>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty Cart Message -->
    <div class="text-center py-5">
      <div class="mb-4">
        <span style="font-size: 6rem;">ðŸ›’</span>
      </div>
      <h2 class="mb-3">Your cart is empty</h2>
      <p class="text-muted mb-4 fs-5">It seems your cart doesn't have books...</p>
      <%= link_to "Browse Books Here", products_path, class: "btn btn-primary btn-lg px-5" %>
    </div>
  <% end %>
</div>