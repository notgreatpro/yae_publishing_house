<!-- app/views/cart/show.html.erb -->
<!-- Features 3.1.1 & 3.1.2 - Shopping Cart -->
<div class="container my-5">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
    </ol>
  </nav>

  <h1 class="mb-4">Your Shopping Cart</h1>

  <% if @cart_items.any? %>
    <div class="row">
      <!-- Cart Items -->
      <div class="col-lg-8">
        <% @cart_items.each do |item| %>
          <div class="card mb-3 shadow-sm border-0">
            <div class="card-body p-4">
              <div class="row align-items-center g-3">
                <!-- Product Image -->
                <div class="col-12 col-md-2 text-center">
                  <% if item[:product].cover_image.attached? %>
                    <%= link_to product_path(item[:product]) do %>
                     <%= image_tag item[:product].thumbnail, 
                        class: "img-fluid rounded", 
                        style: "max-height: 150px; width: auto; object-fit: contain;" %>
                      <% end %>
                  <% else %>
                    <%= link_to product_path(item[:product]) do %>
                      <div class="bg-gradient rounded d-flex align-items-center justify-content-center" 
                           style="height: 150px; width: 100px; margin: 0 auto; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <i class="bi bi-book text-white" style="font-size: 2rem;"></i>
                      </div>
                    <% end %>
                  <% end %>
                </div>

                <!-- Product Info -->
                <div class="col-12 col-md-4">
                  <h5 class="mb-2">
                    <%= link_to item[:product].title, product_path(item[:product]), 
                        class: "text-decoration-none text-dark fw-bold" %>
                  </h5>
                  <% if item[:product].authors.any? %>
                    <p class="text-muted fst-italic small mb-2">
                      by <%= item[:product].authors.map(&:author_name).join(', ') %>
                    </p>
                  <% end %>
                  <p class="text-success fw-bold mb-0 fs-6">
                    <%= number_to_currency(item[:product].current_price) %> each
                  </p>
                  <% if item[:product].stock_quantity && item[:product].stock_quantity < 10 %>
                    <p class="text-danger small mb-0">
                      Only <%= item[:product].stock_quantity %> left in stock
                    </p>
                  <% end %>
                </div>

                <!-- Quantity Controls -->
                <div class="col-6 col-md-3">
                  <label class="form-label small text-muted mb-1">Quantity:</label>
                  <%= form_with url: cart_update_path(item[:product].id), method: :patch, 
                      class: "d-flex align-items-center gap-2" do |f| %>
                    <%= f.number_field :quantity, 
                        value: item[:quantity], 
                        min: 1, 
                        max: item[:product].stock_quantity || 99,
                        class: "form-control text-center",
                        style: "width: 70px;" %>
                    <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
                  <% end %>
                </div>

                <!-- Price & Remove -->
                <div class="col-6 col-md-3 text-end">
                  <p class="fs-5 fw-bold text-dark mb-3">
                    <%= number_to_currency(item[:item_total]) %>
                  </p>
                  <%= button_to cart_remove_path(item[:product].id), 
                      method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      data: { 
                        turbo_confirm: "Remove this item from cart?",
                        confirm: "Remove this item from cart?" 
                      } do %>
                    <i class="bi bi-trash"></i> Remove
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Clear Cart Button -->
        <div class="text-end mb-4">
          <%= button_to cart_clear_path, 
              method: :delete, 
              class: "btn btn-outline-danger",
              data: { 
                turbo_confirm: "Are you sure you want to clear your cart?",
                confirm: "Are you sure you want to clear your cart?" 
              } do %>
            <i class="bi bi-x-circle"></i> Clear Cart
          <% end %>
        </div>
      </div>

      <!-- Order Summary Sidebar -->
      <div class="col-lg-4">
        <div class="card shadow-lg border-0 cart-summary-sticky">
          <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0 fw-bold">Order Summary</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
              <span class="text-muted">Subtotal (<%= pluralize(@cart_items.sum { |i| i[:quantity] }, 'item') %>):</span>
              <span class="fw-bold fs-5"><%= number_to_currency(@total) %></span>
            </div>
            
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted small">Shipping:</span>
              <span class="text-muted small">Calculated at checkout</span>
            </div>
            
            <div class="d-flex justify-content-between mb-4 pb-3 border-bottom">
              <span class="text-muted small">Taxes:</span>
              <span class="text-muted small">Calculated at checkout</span>
            </div>

            <div class="d-flex justify-content-between mb-4">
              <span class="h5 mb-0">Estimated Total:</span>
              <span class="h4 text-primary fw-bold mb-0"><%= number_to_currency(@total) %></span>
            </div>

            <% if customer_signed_in? %>
              <%= link_to checkout_path, class: "btn btn-success btn-lg w-100 mb-3 py-3" do %>
                <i class="bi bi-credit-card me-2"></i>Proceed to Checkout
              <% end %>
            <% else %>
              <div class="alert alert-info mb-3" role="alert">
                <p class="mb-2 fw-bold small"><i class="bi bi-info-circle me-2"></i>Please log in to checkout</p>
                <%= link_to new_customer_session_path, class: "btn btn-primary w-100 mb-2" do %>
                  <i class="bi bi-box-arrow-in-right me-2"></i>Log In
                <% end %>
                <%= link_to new_customer_registration_path, class: "btn btn-outline-primary w-100" do %>
                  <i class="bi bi-person-plus me-2"></i>Create Account
                <% end %>
              </div>
            <% end %>

            <%= link_to products_path, class: "btn btn-outline-secondary w-100" do %>
              <i class="bi bi-arrow-left me-2"></i>Continue Shopping
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty Cart Message -->
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="bi bi-cart-x text-muted" style="font-size: 5rem;"></i>
      </div>
      <h2 class="mb-3">Your cart is empty</h2>
      <p class="text-muted mb-4 fs-5">It seems your cart doesn't have books...</p>
      <%= link_to products_path, class: "btn btn-primary btn-lg px-5" do %>
        <i class="bi bi-book me-2"></i>Browse Books Here
      <% end %>
    </div>
  <% end %>
</div>

<style>
  /* Sticky cart summary that doesn't overlap header */
  .cart-summary-sticky {
    position: sticky;
    top: 80px; /* Adjust based on your header height */
    z-index: 100;
    border-radius: 12px;
  }

  /* Card styling */
  .card {
    border-radius: 10px;
  }

  /* Button hover effects */
  .btn:hover {
    transform: translateY(-2px);
    transition: all 0.2s ease;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .cart-summary-sticky {
      position: relative;
      top: 0;
    }
  }
</style>